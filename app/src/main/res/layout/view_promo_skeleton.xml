<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content"
    NOT_FOUND_0x15="8dp"
    NOT_FOUND_0x16="0dp">
    <LinearLayout
        orientation="vertical"
        id="@+id/ll_promo_skeleton_container"
        background="@drawable/rounded_white_border"
        padding="1dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginStart="16dp"
        layout_marginEnd="16dp">
        <View
            background="@drawable/bg_top_rounded_skeleton_banner"
            layout_width="match_parent"
            layout_height="88dp"
            scaleType="fitXY"/>
        <View
            background="@drawable/square_rounded_skeleton"
            layout_width="match_parent"
            layout_height="18dp"
            layout_marginLeft="16dp"
            layout_marginTop="12dp"
            layout_marginRight="16dp"
            layout_marginStart="16dp"
            layout_marginEnd="16dp"/>
        <LinearLayout
            orientation="horizontal"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginLeft="16dp"
            layout_marginTop="4dp"
            layout_marginRight="16dp"
            weightSum="1"
            layout_marginStart="16dp"
            layout_marginEnd="16dp">
            <View
                background="@drawable/square_rounded_skeleton"
                layout_width="0dp"
                layout_height="18dp"
                layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            orientation="horizontal"
            paddingLeft="16dp"
            paddingTop="12dp"
            paddingRight="16dp"
            paddingBottom="16dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            weightSum="1"
            paddingStart="16dp"
            paddingEnd="16dp">
            <View
                layout_gravity="center_vertical"
                background="@drawable/square_rounded_skeleton"
                layout_width="14dp"
                layout_height="14dp"/>
            <View
                layout_gravity="center_vertical"
                background="@drawable/square_rounded_skeleton"
                layout_width="0dp"
                layout_height="14dp"
                layout_marginLeft="5dp"
                layout_marginRight="16dp"
                layout_weight="0.5"
                layout_marginStart="5dp"
                layout_marginEnd="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
