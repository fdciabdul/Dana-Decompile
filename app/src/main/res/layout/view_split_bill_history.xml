<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    id="@+id/ll_split_bill_history_container"
    layout_width="match_parent"
    layout_height="wrap_content">
    <TextView
        textSize="16sp"
        textStyle="bold"
        textColor="#000000"
        id="@+id/tv_split_bill_history_title"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="@string/split_bill_history"
        fontFamily="@font/2131296266"
        NOT_FOUND_0xe="0"
        NOT_FOUND_0x10="0"/>
    <View
        id="@+id/divider"
        background="#d1d1d1"
        layout_width="match_parent"
        layout_height="0.5dp"
        layout_marginTop="16dp"
        NOT_FOUND_0xe="0"
        NOT_FOUND_0xf="@+id/tv_split_bill_history_title"/>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/rv_split_bill_history"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="21dp"
        NOT_FOUND_0xe="0"
        NOT_FOUND_0xf="@+id/divider"/>
    <LinearLayout
        gravity="center_horizontal"
        orientation="vertical"
        id="@+id/ll_history_empty_state"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="40dp"
        NOT_FOUND_0xe="0"
        NOT_FOUND_0xf="@+id/divider">
        <ImageView
            layout_width="wrap_content"
            layout_height="wrap_content"
            src="@drawable/split_bill_history_empty_state"/>
        <TextView
            textSize="14sp"
            textColor="#bfbfbf"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="28dp"
            text="@string/bill_empty_state_description"
            fontFamily="@font/2131296265"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
