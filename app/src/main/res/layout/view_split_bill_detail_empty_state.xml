<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    gravity="center"
    orientation="vertical"
    id="@+id/ll_split_bill_empty_state"
    layout_width="match_parent"
    layout_height="match_parent">
    <ImageView
        layout_width="match_parent"
        layout_height="wrap_content"
        src="@drawable/bill_detail_empty_state"/>
    <TextView
        textSize="16sp"
        textColor="@android:color/black"
        gravity="center"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="@string/empty_state_bill_detail_title"
        lineSpacingExtra="4sp"
        fontFamily="@font/open_sans_bold"/>
    <TextView
        textSize="14sp"
        textColor="#313131"
        gravity="center"
        paddingLeft="10dp"
        paddingRight="10dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="4dp"
        text="@string/empty_state_bill_detail_description"
        lineSpacingExtra="4sp"
        fontFamily="@font/2131296265"
        paddingStart="10dp"
        paddingEnd="10dp"/>
</LinearLayout>
