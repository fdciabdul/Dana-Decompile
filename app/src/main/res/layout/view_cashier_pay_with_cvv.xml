<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    background="#ffffff"
    paddingTop="8dp"
    paddingBottom="8dp"
    focusable="true"
    focusableInTouchMode="true"
    layout_width="match_parent"
    layout_height="wrap_content"
    paddingStart="16dp"
    paddingEnd="16dp">
    <FrameLayout
        id="@+id/llInputCard"
        layout_width="0dp"
        layout_height="wrap_content"
        NOT_FOUND_0x12="0"
        NOT_FOUND_0x13="0"
        NOT_FOUND_0x14="@+id/tvTitle">
        <androidx.appcompat.widget.AppCompatEditText
            id="@+id/etCvvInput"
            background="@drawable/selector_et_yellow"
            layout_width="match_parent"
            layout_height="wrap_content"
            maxLines="1"
            android:maxLength="3"
            inputType="numberPassword"
            contentDescription="@string/txt_cvv"
            textCursorDrawable="@drawable/cursor_yellow_50"
            style="@style/2132017413"/>
        <androidx.appcompat.widget.AppCompatImageView
            layout_gravity="end|center_vertical"
            id="@+id/ivCvvInfo"
            layout_width="20dp"
            layout_height="20dp"
            layout_marginBottom="2dp"
            NOT_FOUND_0x16="@drawable/ic_info_grey_20"/>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatTextView
        id="@+id/tvTitle"
        layout_width="0dp"
        layout_height="wrap_content"
        text="@string/input_card_cvv_title"
        NOT_FOUND_0x12="0"
        NOT_FOUND_0x13="0"
        NOT_FOUND_0x15="0"
        style="@style/2132017901"/>
</androidx.constraintlayout.widget.ConstraintLayout>
