<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    id="@+id/vg_dana_statement_widget_root_shimmer"
    background="@drawable/bg_rounded_blue_50_12dp"
    layout_width="258dp"
    layout_height="wrap_content"
    minHeight="110dp">
    <RelativeLayout
        id="@+id/view_title_shimmer"
        background="@drawable/bg_rounded_blue_40_33dp"
        layout_width="51dp"
        layout_height="14dp"
        layout_marginTop="12dp"
        layout_alignParentTop="true"
        layout_marginStart="8dp"
        layout_alignParentStart="true"/>
    <ImageButton
        id="@+id/dana_statement_refresh_shimmer"
        background="@android:color/transparent"
        layout_width="16dp"
        layout_height="16dp"
        layout_marginTop="8dp"
        src="@drawable/ic_refresh_24dp"
        scaleType="fitCenter"
        tint="#ffffff"
        layout_alignParentTop="true"
        layout_marginEnd="8dp"
        layout_alignParentEnd="true"/>
    <RelativeLayout
        id="@+id/view_subtitle_shimmer"
        background="@drawable/bg_rounded_blue_40_33dp"
        paddingBottom="8dp"
        layout_width="92dp"
        layout_height="19dp"
        layout_marginTop="5dp"
        layout_below="@+id/view_title_shimmer"
        layout_marginStart="8dp"/>
    <LinearLayout
        orientation="horizontal"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="10dp"
        layout_marginBottom="12dp"
        layout_below="@+id/view_subtitle_shimmer"
        layout_marginStart="8dp"
        layout_marginEnd="8dp">
        <RelativeLayout
            gravity="center"
            id="@+id/vg_quick_action_m_wallet"
            background="@drawable/bg_rounded_8dp_blue40_ripple"
            layout_width="54dp"
            layout_height="44dp"
            minWidth="54dp"/>
        <RelativeLayout
            gravity="center"
            id="@+id/vg_quick_action_m_top_up"
            background="@drawable/bg_rounded_8dp_blue40_ripple"
            layout_width="54dp"
            layout_height="44dp"
            minWidth="54dp"
            layout_marginStart="8dp"/>
        <RelativeLayout
            gravity="center"
            id="@+id/vg_quick_action_m_send"
            background="@drawable/bg_rounded_8dp_blue40_ripple"
            layout_width="54dp"
            layout_height="44dp"
            minWidth="54dp"
            layout_marginStart="8dp"/>
        <RelativeLayout
            gravity="center"
            id="@+id/vg_quick_action_m_request"
            background="@drawable/bg_rounded_8dp_blue40_ripple"
            layout_width="54dp"
            layout_height="44dp"
            minWidth="54dp"
            layout_marginStart="8dp"/>
    </LinearLayout>
</RelativeLayout>
