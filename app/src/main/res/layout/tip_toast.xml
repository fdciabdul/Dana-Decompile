<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="@drawable/tip_background"
    layout_width="wrap_content"
    layout_height="wrap_content">
    <FrameLayout
        id="@+id/fl_root"
        padding="15dp"
        layout_width="wrap_content"
        layout_height="wrap_content">
        <FrameLayout
            layout_gravity="center_horizontal"
            layout_width="24dp"
            layout_height="24dp"
            layout_marginTop="18dp">
            <FrameLayout
                id="@+id/fl_fill"
                background="@drawable/tip_fill"
                layout_width="24dp"
                layout_height="24dp">
                <ImageView
                    layout_gravity="center"
                    id="@+id/iv_fill"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    src="@drawable/tip_right"/>
            </FrameLayout>
        </FrameLayout>
        <TextView
            textColor="#ffffff"
            gravity="center"
            id="@+id/tv_message"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="48dp"
            text="操作成功"
            maxLines="1"
            singleLine="true"/>
    </FrameLayout>
</RelativeLayout>
