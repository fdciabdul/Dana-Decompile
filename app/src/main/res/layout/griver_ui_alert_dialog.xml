<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    gravity="center"
    orientation="horizontal"
    background="@android:color/transparent"
    layout_width="match_parent"
    layout_height="wrap_content">
    <RelativeLayout
        id="@+id/dialog_bg"
        background="@drawable/griver_ui_white_corner_bg"
        layout_width="0dp"
        layout_height="wrap_content"
        layout_weight="1">
        <TextView
            textSize="20dp"
            textColor="#000000"
            id="@+id/title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="20dp"
            layout_marginTop="20dp"
            layout_marginRight="20dp"
            text="@string/griver_pwd_input_dialog_titile"
            layout_alignParentLeft="true"/>
        <RelativeLayout
            id="@+id/container"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_below="@+id/title"/>
        <LinearLayout
            id="@+id/button_ll"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="27dp"
            layout_marginRight="14dp"
            layout_marginBottom="14dp"
            layout_below="@+id/container"
            layout_alignParentRight="true">
            <Button
                textSize="16dp"
                textColor="#108ee9"
                id="@+id/btn_negative"
                background="@drawable/griver_ui_notice_dialog_btn_selector"
                paddingLeft="16dp"
                paddingRight="16dp"
                layout_width="wrap_content"
                layout_height="32dp"
                text="@string/griver_base_cancel"
                singleLine="true"/>
            <Button
                textSize="16dp"
                textColor="#108ee9"
                id="@+id/btn_positive"
                background="@drawable/griver_ui_notice_dialog_btn_selector"
                paddingLeft="16dp"
                paddingRight="16dp"
                layout_width="wrap_content"
                layout_height="32dp"
                text="@string/griver_base_confirm"
                singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
