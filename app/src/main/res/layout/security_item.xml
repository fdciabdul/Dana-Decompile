<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="match_parent"
    layout_height="wrap_content">
    <RelativeLayout
        id="@+id/rl_item"
        layout_width="match_parent"
        layout_height="52dp">
        <TextView
            textSize="16dp"
            textColor="#333333"
            id="@+id/tv_left"
            paddingLeft="16dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            singleLine="true"
            layout_centerVertical="true"/>
        <ImageView
            id="@+id/red_point"
            background="@drawable/redpoint"
            layout_width="8dp"
            layout_height="8dp"
            layout_marginLeft="10dp"
            scaleType="fitCenter"
            layout_toRightOf="@+id/tv_left"
            layout_centerVertical="true"/>
        <ImageView
            id="@+id/iv_enter"
            layout_width="8dp"
            layout_height="13dp"
            layout_marginRight="16dp"
            src="@drawable/icon_kba"
            layout_alignParentRight="true"
            layout_centerVertical="true"/>
        <TextView
            textSize="16dp"
            textColor="#999999"
            id="@+id/tv_status"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginRight="16dp"
            layout_toLeftOf="@+id/iv_enter"
            layout_centerVertical="true"/>
        <View
            background="#dddddd"
            layout_width="match_parent"
            layout_height="1px"
            layout_marginLeft="16dp"
            layout_marginRight="16dp"
            layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
