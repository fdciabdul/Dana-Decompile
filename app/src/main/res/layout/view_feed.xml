<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    background="@android:color/transparent"
    layout_width="match_parent"
    layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        layout_gravity="center_horizontal"
        id="@+id/civ_profile_avatar"
        layout_width="48dp"
        layout_height="48dp"
        layout_marginTop="2dp"
        layout_marginBottom="16dp"
        src="@drawable/avatar_placeholder"
        contentDescription="@string/imgProfileAvatar"
        layout_marginStart="12dp"
        NOT_FOUND_0xd="@color/2131099990"
        NOT_FOUND_0xe="1dp"
        NOT_FOUND_0x14="0"
        NOT_FOUND_0x16="0"/>
    <View
        id="@+id/view_feed_view_notif_badge_positioner"
        layout_width="1dp"
        layout_height="1dp"
        layout_marginTop="2dp"
        layout_marginStart="2dp"
        NOT_FOUND_0x13="@+id/civ_profile_avatar"
        NOT_FOUND_0x15="@+id/civ_profile_avatar"/>
    <de.hdodenhof.circleimageview.CircleImageView
        layout_gravity="center_horizontal"
        id="@+id/civ_view_feed_notif_badge"
        visibility="gone"
        layout_width="20dp"
        layout_height="20dp"
        src="@drawable/avatar_placeholder"
        NOT_FOUND_0xf="@+id/view_feed_view_notif_badge_positioner"
        NOT_FOUND_0x11="@+id/view_feed_view_notif_badge_positioner"/>
    <ImageView
        gravity="center"
        id="@+id/ivUnreadBadge"
        visibility="gone"
        layout_width="12dp"
        layout_height="12dp"
        src="@drawable/unread_badge"
        NOT_FOUND_0x12="@+id/civ_profile_avatar"
        NOT_FOUND_0x16="@+id/civ_profile_avatar"/>
    <id.dana.social.view.BubbleFeedView
        id="@+id/view_bubble_feed"
        layout_width="0dp"
        layout_height="wrap_content"
        layout_marginEnd="8dp"
        NOT_FOUND_0x10="0"
        NOT_FOUND_0x13="@+id/civ_profile_avatar"
        NOT_FOUND_0x16="0"/>
    <ImageView
        gravity="center"
        id="@+id/iv_view_feed_unread_notification_badge"
        visibility="gone"
        layout_width="12dp"
        layout_height="12dp"
        src="@drawable/unread_badge"
        NOT_FOUND_0x10="@+id/view_bubble_feed"
        NOT_FOUND_0x16="@+id/view_bubble_feed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
