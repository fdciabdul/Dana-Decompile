<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    style="@style/2132017490">
    <LinearLayout
        orientation="horizontal"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="16dp"
        layout_marginRight="16dp"
        weightSum="1"
        layout_marginStart="16dp"
        layout_marginEnd="16dp">
        <TextView
            textSize="12sp"
            textColor="#bfbfbf"
            layout_width="0dp"
            layout_marginTop="8dp"
            layout_marginBottom="8dp"
            text="@string/split_bill_with"
            layout_weight="1"
            lineSpacingExtra="4sp"
            textAllCaps="true"
            fontFamily="@font/2131296266"
            style="@style/2132018187"/>
        <TextView
            textSize="12sp"
            textColor="#008ef0"
            id="@+id/tv_close_payer"
            visibility="gone"
            layout_marginTop="8dp"
            layout_marginBottom="8dp"
            text="@string/mark_as_paid"
            lineSpacingExtra="4sp"
            contentDescription="@string/btnMarkPaid"
            textAllCaps="true"
            fontFamily="@font/2131296266"
            style="@style/2132018187"/>
    </LinearLayout>
    <View
        layout_marginLeft="16dp"
        layout_marginRight="16dp"
        layout_marginStart="16dp"
        layout_marginEnd="16dp"
        style="@style/2132017967"/>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/rv_payer"
        scrollbars="vertical"
        layout_marginTop="6dp"
        style="@style/2132017490"/>
</LinearLayout>
