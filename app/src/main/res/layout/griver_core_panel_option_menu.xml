<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <RelativeLayout
        background="@drawable/griver_core_title_drawable"
        layout_width="match_parent"
        layout_height="50dp">
        <ImageView
            id="@+id/iv_icon"
            padding="2dp"
            layout_width="24dp"
            layout_height="24dp"
            layout_marginLeft="16dp"
            scaleType="centerInside"
            layout_centerVertical="true"/>
        <TextView
            textSize="15sp"
            textColor="#333333"
            id="@+id/tv_name"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="10dp"
            text="Mini Program"
            layout_toRightOf="@+id/iv_icon"
            layout_centerVertical="true"/>
        <ImageView
            id="@+id/iv_more"
            layout_width="16dp"
            layout_height="16dp"
            layout_marginLeft="10dp"
            src="@drawable/griver_core_more_right"
            layout_toRightOf="@+id/tv_name"
            layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/recycler_view_user"
        background="#f6f6f6"
        paddingLeft="10dp"
        paddingRight="10dp"
        layout_width="match_parent"
        layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/recycler_view_app"
        background="#f6f6f6"
        paddingLeft="10dp"
        paddingRight="10dp"
        layout_width="match_parent"
        layout_height="wrap_content"/>
    <TextView
        textSize="18sp"
        textColor="#333333"
        gravity="center"
        id="@+id/tv_cancel"
        background="@android:color/white"
        layout_width="match_parent"
        layout_height="60dp"
        text="Cancel"/>
</LinearLayout>
