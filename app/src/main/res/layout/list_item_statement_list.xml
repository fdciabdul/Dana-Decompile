<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    paddingBottom="4dp"
    layout_width="match_parent"
    layout_height="wrap_content">
    <ImageView
        id="@+id/v_list_item_statement_image_outline"
        layout_width="16dp"
        layout_height="16dp"
        layout_marginTop="2dp"
        src="@drawable/bg_circle_white"
        scaleType="fitXY"/>
    <ImageView
        id="@+id/iv_list_item_statement_icon"
        layout_width="10dp"
        layout_height="10dp"
        layout_margin="3dp"
        src="@drawable/ic_gift_orange"
        scaleType="fitXY"
        layout_alignTop="@+id/v_list_item_statement_image_outline"
        layout_alignBottom="@+id/v_list_item_statement_image_outline"
        layout_alignStart="@+id/v_list_item_statement_image_outline"
        layout_alignEnd="@+id/v_list_item_statement_image_outline"/>
    <TextView
        id="@+id/tv_list_item_statement_statement_purpose"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginStart="8dp"
        layout_toEndOf="@+id/v_list_item_statement_image_outline"
        style="@style/2132017430"/>
    <TextView
        textStyle="bold"
        id="@+id/tv_list_item_statement_statement_purpose_amount"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="4dp"
        layout_below="@+id/tv_list_item_statement_statement_purpose"
        layout_marginStart="8dp"
        layout_toEndOf="@+id/v_list_item_statement_image_outline"
        style="@style/2132017430"/>
</RelativeLayout>
