<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        background="@drawable/ic_nearby_deals_background"
        paddingTop="8dp"
        paddingBottom="8dp"
        layout_width="match_parent"
        layout_height="wrap_content">
        <TextView
            id="@+id/tv_header"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginBottom="8dp"
            text="@string/deals_header_text"
            alpha="0"
            layout_marginStart="16dp"
            NOT_FOUND_0x10="@+id/rv_special_deals"
            NOT_FOUND_0x11="0"
            NOT_FOUND_0x12="0"
            NOT_FOUND_0x13="0"
            NOT_FOUND_0x15="0"
            style="@style/2132017907"/>
        <ImageView
            id="@+id/iv_icon"
            layout_width="44dp"
            layout_height="44dp"
            layout_marginBottom="10dp"
            src="@drawable/ic_deals_logo"
            layout_marginStart="16dp"
            NOT_FOUND_0x10="@+id/tv_title"
            NOT_FOUND_0x11="0"
            NOT_FOUND_0x12="0"
            NOT_FOUND_0x13="0"
            NOT_FOUND_0x14="@+id/tv_header"
            NOT_FOUND_0x16="0"
            NOT_FOUND_0x17="2"/>
        <TextView
            id="@+id/tv_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginBottom="4dp"
            text="@string/deals_header_text"
            layout_marginStart="16dp"
            NOT_FOUND_0x10="@+id/tv_subtitle"
            NOT_FOUND_0x11="0"
            NOT_FOUND_0x12="0"
            NOT_FOUND_0x13="0"
            NOT_FOUND_0x14="@+id/iv_icon"
            NOT_FOUND_0x17="2"
            style="@style/2132017923"/>
        <TextView
            id="@+id/tv_subtitle"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginBottom="12dp"
            text="@string/deals_subtitle_text"
            layout_marginStart="16dp"
            NOT_FOUND_0xf="0"
            NOT_FOUND_0x11="0"
            NOT_FOUND_0x12="0"
            NOT_FOUND_0x13="0"
            NOT_FOUND_0x14="@+id/tv_title"
            style="@style/2132017404"/>
        <androidx.recyclerview.widget.RecyclerView
            orientation="horizontal"
            id="@+id/rv_special_deals"
            paddingLeft="16dp"
            paddingRight="16dp"
            clipToPadding="false"
            layout_width="match_parent"
            layout_height="wrap_content"
            NOT_FOUND_0xf="0"
            NOT_FOUND_0x11="0"
            NOT_FOUND_0x13="0"
            NOT_FOUND_0x14="@+id/tv_header"
            NOT_FOUND_0x16="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        id="@+id/bottom_divider"
        background="#f5f5f5"
        layout_width="match_parent"
        layout_height="8dp"/>
</LinearLayout>
