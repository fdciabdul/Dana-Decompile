<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <com.alipay.androidinter.app.safepaybase.widget.SimplePassword
        textColor="#00000000"
        layout_gravity="center_horizontal"
        id="@+id/spwd_input"
        layout_width="match_parent"
        layout_height="46dp"
        layout_marginLeft="0dp"
        layout_marginTop="0dp"
        layout_marginRight="0dp"
        layout_marginBottom="0dp"
        cursorVisible="false"
        password="true"
        android:maxLength="6"
        inputType="numberPassword"/>
    <RelativeLayout
        id="@+id/common_input_item"
        background="@drawable/mini_input_bg_corner"
        layout_width="match_parent"
        layout_height="46dp">
        <Button
            textSize="17dp"
            textColor="#000000"
            id="@+id/button_ok"
            background="@android:color/transparent"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="20dp"
            layout_marginRight="20dp"
            text="@string/mini_page_next"
            layout_alignParentRight="true"
            layout_centerVertical="true"/>
        <EditText
            textSize="16dp"
            textColor="#ff000000"
            layout_gravity="center_horizontal"
            id="@+id/input_et_password"
            background="@android:color/transparent"
            paddingRight="5dp"
            layout_width="match_parent"
            layout_height="match_parent"
            layout_marginLeft="10dp"
            layout_marginRight="10dp"
            minHeight="46dp"
            singleLine="true"
            layout_toLeftOf="@+id/button_ok"
            layout_alignParentLeft="true"
            inputType="textPassword"/>
        <ImageView
            id="@+id/button_ok_verticalline"
            paddingTop="5dp"
            paddingBottom="5dp"
            layout_width="wrap_content"
            layout_height="match_parent"
            src="@drawable/mini_vertical_line"
            scaleType="fitCenter"
            layout_toLeftOf="@+id/button_ok"/>
    </RelativeLayout>
</LinearLayout>
