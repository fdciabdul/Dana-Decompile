<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    id="@+id/vg_quest_view_root"
    layout_width="match_parent"
    layout_height="wrap_content">
    <ImageView
        id="@+id/iv_quest_status"
        layout_width="32dp"
        layout_height="32dp"
        src="@drawable/ic_promo_quest_item_not_available"
        NOT_FOUND_0x17="0"
        NOT_FOUND_0x19="0"/>
    <View
        id="@+id/view_track_line"
        background="@drawable/view_active_quest_divider_sequential_background"
        visibility="invisible"
        layout_width="2dp"
        layout_height="0dp"
        layout_marginTop="8dp"
        layout_marginStart="16dp"
        NOT_FOUND_0x13="0"
        NOT_FOUND_0x17="@+id/iv_quest_status"
        NOT_FOUND_0x18="@+id/iv_quest_status"/>
    <TextView
        id="@+id/tv_quest_title"
        layout_width="0dp"
        layout_height="wrap_content"
        paddingEnd="8dp"
        layout_marginStart="12dp"
        NOT_FOUND_0x15="@+id/vg_quest_action"
        NOT_FOUND_0x16="@+id/iv_quest_status"
        NOT_FOUND_0x19="0"
        style="@style/2132017908"/>
    <TextView
        id="@+id/tv_quest_description"
        layout_width="0dp"
        layout_height="wrap_content"
        layout_below="@+id/tv_quest_title"
        paddingEnd="8dp"
        NOT_FOUND_0x15="@+id/vg_quest_action"
        NOT_FOUND_0x17="@+id/tv_quest_title"
        NOT_FOUND_0x18="@+id/tv_quest_title"
        style="@style/2132017440"/>
    <View
        id="@+id/view_quest_separator"
        background="@drawable/view_quest_detail_separator"
        layout_width="0dp"
        layout_height="1dp"
        layout_marginTop="12dp"
        layout_marginBottom="12dp"
        NOT_FOUND_0x13="0"
        NOT_FOUND_0x17="@+id/tv_quest_title"
        NOT_FOUND_0x18="@+id/tv_quest_description"/>
    <LinearLayout
        orientation="vertical"
        id="@+id/vg_quest_action"
        layout_width="wrap_content"
        layout_height="wrap_content"
        NOT_FOUND_0x14="0"
        NOT_FOUND_0x19="0">
        <Button
            textSize="12sp"
            layout_gravity="end"
            id="@+id/btn_quest_action"
            paddingLeft="10dp"
            paddingRight="10dp"
            visibility="visible"
            layout_width="wrap_content"
            layout_height="32dp"
            minWidth="64dp"
            minHeight="32dp"
            fontFamily="@font/2131296266"
            style="@style/2132017655"/>
        <id.dana.richview.LogoProgressView
            layout_gravity="center_horizontal"
            id="@+id/lpv_quest_loading"
            visibility="gone"
            layout_width="32dp"
            layout_height="32dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
