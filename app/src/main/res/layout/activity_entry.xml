<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    background="@android:color/background_light"
    padding="36dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <Button
        id="@+id/button1"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="香港指纹验证"/>
    <Button
        id="@+id/button1_1"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="星汇指纹验证"/>
    <Button
        id="@+id/button11"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="指纹验证2"/>
    <Button
        id="@+id/button2"
        layout_width="match_parent"
        layout_height="0dp"
        layout_marginTop="36dp"
        text="PIN核身（短密）"
        layout_weight="1"/>
    <Button
        id="@+id/button22"
        visibility="gone"
        layout_width="match_parent"
        layout_height="0dp"
        layout_marginTop="36dp"
        text="PIN核身（长密）"
        layout_weight="1"/>
    <Button
        id="@+id/button3"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="36dp"
        text="极简OTP核身"/>
    <Button
        id="@+id/button4"
        visibility="gone"
        layout_width="match_parent"
        layout_height="0dp"
        layout_marginTop="36dp"
        text="OTP核身"
        layout_weight="1"/>
    <Button
        id="@+id/button5"
        layout_width="match_parent"
        layout_height="0dp"
        layout_marginTop="36dp"
        text="星汇OTP核身"
        layout_weight="1"/>
</LinearLayout>
