<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    background="#ffffff"
    paddingTop="2dp"
    layout_width="match_parent"
    layout_height="wrap_content">
    <TextView
        textSize="20dp"
        textColor="#333333"
        gravity="left"
        id="@+id/tv_title"
        paddingLeft="24dp"
        paddingTop="16dp"
        paddingRight="24dp"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="Title"
        maxLines="1"/>
    <TextView
        textSize="16dp"
        textColor="#333333"
        gravity="left"
        id="@+id/tv_msg"
        paddingLeft="24dp"
        paddingTop="16dp"
        paddingRight="24dp"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        text=""/>
    <RelativeLayout
        paddingLeft="24dp"
        paddingTop="12dp"
        paddingRight="24dp"
        paddingBottom="16dp"
        layout_width="match_parent"
        layout_height="wrap_content">
        <TextView
            textSize="16dp"
            textColor="#108ee9"
            id="@+id/tv_ok"
            paddingRight="4dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/inter_uitools_ok"
            maxLines="1"
            layout_alignParentRight="true"/>
        <TextView
            textSize="16dp"
            textColor="#999999"
            id="@+id/tv_cancel"
            paddingRight="4dp"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginRight="31dp"
            text="@string/inter_uitools_cancel"
            maxLines="1"
            layout_toLeftOf="@+id/tv_ok"/>
    </RelativeLayout>
</LinearLayout>
