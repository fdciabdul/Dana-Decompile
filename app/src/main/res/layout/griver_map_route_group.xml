<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="match_parent"
    layout_height="match_parent">
    <LinearLayout
        gravity="center_vertical"
        layout_gravity="top"
        orientation="horizontal"
        background="@drawable/griver_map_bubbles_bg"
        paddingLeft="20dp"
        paddingTop="14dp"
        paddingRight="20dp"
        paddingBottom="14dp"
        visibility="visible"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_margin="10dp">
        <LinearLayout
            orientation="vertical"
            layout_width="wrap_content"
            layout_height="wrap_content">
            <ImageView
                layout_gravity="center_horizontal"
                padding="0dp"
                layout_width="wrap_content"
                layout_height="wrap_content"/>
            <TextView
                textSize="12dp"
                textColor="#000000"
                layout_gravity="center_horizontal"
                layout_width="wrap_content"
                layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            orientation="vertical"
            padding="10dp"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1">
            <TextView
                textSize="13dp"
                textColor="#000000"
                ellipsize="end"
                layout_width="wrap_content"
                layout_height="wrap_content"
                singleLine="true"/>
            <ImageView
                background="@android:color/transparent"
                layout_width="match_parent"
                layout_height="1px"
                layout_marginTop="5dp"
                layout_marginBottom="5dp"
                src="#cccccc"/>
            <TextView
                textSize="13dp"
                textColor="#000000"
                ellipsize="end"
                layout_width="wrap_content"
                layout_height="wrap_content"
                singleLine="true"/>
        </LinearLayout>
        <ImageView
            layout_width="1px"
            layout_height="match_parent"
            src="#cccccc"/>
        <ImageButton
            id="@+id/route_close"
            background="#00000000"
            paddingLeft="14dp"
            layout_width="50dp"
            layout_height="50dp"
            layout_margin="0dp"
            src="@drawable/griver_map_route_close"
            scaleType="centerInside"/>
    </LinearLayout>
    <LinearLayout
        gravity="center_vertical"
        layout_gravity="bottom|right"
        orientation="horizontal"
        background="@drawable/griver_map_bubbles_bg"
        paddingLeft="5dp"
        paddingTop="14dp"
        paddingRight="5dp"
        paddingBottom="14dp"
        visibility="visible"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginLeft="10dp"
        layout_marginBottom="10dp">
        <ImageButton
            id="@+id/route_detail"
            background="@android:color/transparent"
            paddingLeft="10dp"
            paddingRight="10dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_margin="0dp"
            src="@drawable/griver_map_route_detail_selector"
            scaleType="centerInside"/>
        <ImageButton
            background="@android:color/transparent"
            layout_width="1px"
            layout_height="match_parent"
            src="#cccccc"/>
        <ImageButton
            id="@+id/bus_route"
            background="@android:color/transparent"
            paddingLeft="10dp"
            paddingRight="10dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_margin="0dp"
            src="@drawable/griver_map_bus_route_selector"
            scaleType="centerInside"/>
        <ImageButton
            id="@+id/car_route"
            background="@android:color/transparent"
            paddingLeft="10dp"
            paddingRight="10dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_margin="0dp"
            src="@drawable/griver_map_car_route_selector"
            scaleType="centerInside"/>
        <ImageButton
            id="@+id/foot_route"
            background="@android:color/transparent"
            paddingLeft="10dp"
            paddingRight="10dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_margin="0dp"
            src="@drawable/griver_map_foot_route_selector"
            scaleType="centerInside"/>
    </LinearLayout>
</FrameLayout>
