<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    paddingLeft="20dp"
    paddingRight="20dp"
    layout_width="match_parent"
    layout_height="48dp">
    <RelativeLayout
        gravity="left"
        layout_width="wrap_content"
        layout_height="match_parent">
        <LinearLayout
            id="@+id/badge_layout"
            layout_width="wrap_content"
            layout_height="match_parent"
            layout_marginLeft="10dp"
            layout_alignParentRight="true">
            <TextView
                layout_gravity="center_vertical"
                id="@+id/tv_badge_point"
                background="@drawable/griver_core_red_point"
                visibility="gone"
                layout_width="10dp"
                layout_height="10dp"/>
            <TextView
                textSize="10sp"
                textColor="#ffffff"
                ellipsize="end"
                layout_gravity="center_vertical"
                id="@+id/tv_badge"
                background="@drawable/griver_core_red_capsule"
                paddingLeft="5dp"
                paddingTop="2dp"
                paddingRight="5dp"
                paddingBottom="2dp"
                visibility="gone"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="100"
                maxLines="1"
                maxEms="5"/>
        </LinearLayout>
        <TextView
            textSize="16sp"
            textColor="#ff000000"
            ellipsize="end"
            id="@+id/tv_content"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="111111"
            maxLines="1"
            layout_toLeftOf="@+id/badge_layout"
            layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        background="#e5e5e5"
        layout_width="match_parent"
        layout_height="0.5dp"
        layout_alignParentTop="true"/>
</RelativeLayout>
