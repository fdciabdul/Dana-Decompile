<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/status_bar_latest_event_content"
    layout_width="match_parent"
    layout_height="128dp">
    <include
        layout_width="64dp"
        layout_height="64dp"
        layout="@layout/notification_template_icon_group"/>
    <include
        layout_width="48dp"
        layout_height="48dp"
        layout_marginLeft="2dp"
        layout_marginRight="2dp"
        layout_alignParentRight="true"
        layout_alignParentEnd="true"
        layout="@layout/notification_media_cancel_action"/>
    <include
        layout_gravity="fill_vertical"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="64dp"
        layout_toLeftOf="@+id/cancel_action"
        layout_marginStart="64dp"
        layout_toStartOf="@+id/cancel_action"
        layout="@layout/notification_template_lines_media"/>
    <LinearLayout
        orientation="horizontal"
        id="@+id/media_actions"
        layout_width="match_parent"
        layout_height="48dp"
        layout_marginLeft="12dp"
        layout_marginRight="12dp"
        layout_alignParentBottom="true"
        layoutDirection="ltr"/>
    <ImageView
        id="@+id/action_divider"
        background="?android:attr/dividerHorizontal"
        layout_width="match_parent"
        layout_height="1dp"
        layout_above="@+id/media_actions"/>
</RelativeLayout>
