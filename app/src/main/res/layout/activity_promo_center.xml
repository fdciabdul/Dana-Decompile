<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    background="#f5f5f5"
    layout_width="match_parent"
    layout_height="match_parent">
    <include
        id="@+id/tb_promo_center"
        layout_width="0dp"
        layout_height="wrap_content"
        NOT_FOUND_0x1a="@+id/pcv_promo_center"
        NOT_FOUND_0x1b="0"
        NOT_FOUND_0x1e="0"
        NOT_FOUND_0x20="0"
        layout="@layout/layout_toolbar"/>
    <id.dana.richview.promocenter.PromoCategoryView
        id="@+id/pcv_promo_center"
        layout_width="0dp"
        layout_height="wrap_content"
        contentDescription="@string/cd_promo_center_category_filter"
        NOT_FOUND_0x1a="@+id/rv_regular_promo"
        NOT_FOUND_0x1b="0"
        NOT_FOUND_0x1e="0"
        NOT_FOUND_0x1f="@+id/tb_promo_center"/>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/rv_regular_promo"
        layout_width="match_parent"
        layout_height="0dp"
        NOT_FOUND_0x1a="@+id/pcb_view"
        NOT_FOUND_0x1b="0"
        NOT_FOUND_0x1e="0"
        NOT_FOUND_0x1f="@+id/pcv_promo_center"
        NOT_FOUND_0x21="1"/>
    <View
        background="@drawable/bg_top_shadow_gradient"
        layout_width="match_parent"
        layout_height="8dp"
        NOT_FOUND_0x1a="@+id/pcb_view"/>
    <id.dana.promocenter.views.PromoCenterBottomMenuView
        id="@+id/pcb_view"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x19="0"/>
    <LinearLayout
        gravity="center"
        orientation="vertical"
        id="@+id/res_0x7f0a0ddb_daggernewservicecardcomponent_newservicecardcomponentimpl_threadexecutorprovider"
        background="#f5f5f5"
        visibility="visible"
        layout_width="match_parent"
        layout_height="0dp"
        NOT_FOUND_0x1a="@+id/pcb_view"
        NOT_FOUND_0x1c="0"
        NOT_FOUND_0x1d="0"
        NOT_FOUND_0x1f="@+id/pcv_promo_center"
        NOT_FOUND_0x21="1">
        <ImageView
            layout_gravity="center_horizontal"
            id="@+id/iv_error_promocenter"
            layout_width="160dp"
            layout_height="160dp"
            src="@drawable/ic_no_connection"/>
        <TextView
            textSize="20sp"
            textStyle="bold"
            textColor="#000000"
            id="@+id/getFeatureForcedFirstCard"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="16dp"
            text="@string/error_promo_title"
            fontFamily="@font/2131296266"
            textAlignment="center"/>
        <TextView
            textSize="16sp"
            textColor="#727272"
            id="@+id/tv_error_description"
            paddingLeft="16sp"
            paddingRight="16sp"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="8dp"
            text="@string/error_promo_description"
            fontFamily="@font/2131296265"
            textAlignment="center"
            paddingStart="16sp"
            paddingEnd="16sp"
            layout_marginStart="26dp"
            layout_marginEnd="26dp"/>
    </LinearLayout>
    <LinearLayout
        layout_gravity="bottom"
        orientation="vertical"
        id="@+id/ll_promo_error_button"
        padding="16dp"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x19="0">
        <Button
            textSize="16sp"
            textColor="#108ee9"
            layout_gravity="bottom"
            id="@+id/btn_home"
            background="@drawable/btn_friendship_rounded_white"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginBottom="16dp"
            text="@string/promo_back_to_home_button"
            fontFamily="@font/2131296266"
            style="@style/2132017577"/>
        <Button
            textSize="16sp"
            textColor="#ffffff"
            layout_gravity="bottom"
            id="@+id/res_0x7f0a023f_apistatus_availablesince"
            background="@drawable/btn_common"
            layout_width="match_parent"
            layout_height="wrap_content"
            text="@string/promo_try_again_button"
            fontFamily="@font/2131296266"
            style="@style/2132017577"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
