<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    padding="8dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <ViewFlipper
        id="@+id/vf_dana_statement_medium_widget"
        layout_width="match_parent"
        layout_height="wrap_content"
        measureAllChildren="true">
        <RelativeLayout
            id="@+id/vg_dana_statement_medium_widget_root"
            background="@drawable/bg_rounded_blue_50_12dp"
            layout_width="250dp"
            layout_height="110dp"
            minHeight="250dp">
            <ImageButton
                id="@+id/ib_dana_statement_medium_refresh"
                background="@android:color/transparent"
                layout_width="16dp"
                layout_height="16dp"
                layout_marginTop="8dp"
                src="@drawable/ic_refresh_24dp"
                scaleType="fitCenter"
                tint="#ffffff"
                layout_alignParentTop="true"
                layout_marginEnd="8dp"
                layout_alignParentEnd="true"/>
            <ImageView
                id="@+id/iv_dana_statement_medium_chart_preview"
                layout_width="140dp"
                layout_height="56dp"
                layout_marginTop="8dp"
                src="@drawable/bg_rounded_8dp_blue40_ripple"
                scaleType="fitXY"
                layout_below="@+id/tv_dana_statement_medium_date"
                layout_marginStart="8dp"/>
            <RelativeLayout
                id="@+id/lv_dana_statement_medium_income_list"
                background="@drawable/bg_capsule_blue_40"
                padding="2dp"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_below="@+id/tv_dana_statement_medium_income_balance_amount"
                layout_marginStart="156dp"
                layout_alignParentStart="true">
                <ImageView
                    id="@+id/iv_list_item_statement_income_icon_1"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_alignParentStart="true"/>
                <ImageView
                    id="@+id/iv_list_item_statement_income_icon_2"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_toEndOf="@+id/iv_list_item_statement_income_icon_1"/>
                <ImageView
                    id="@+id/iv_list_item_statement_income_icon_3"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_toEndOf="@+id/iv_list_item_statement_income_icon_2"/>
                <ImageView
                    id="@+id/iv_list_item_statement_income_icon_4"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_toEndOf="@+id/iv_list_item_statement_income_icon_3"/>
            </RelativeLayout>
            <RelativeLayout
                id="@+id/lv_dana_statement_medium_expense_list"
                background="@drawable/bg_capsule_blue_40"
                padding="2dp"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_below="@+id/tv_dana_statement_medium_expense_balance_amount"
                layout_marginStart="156dp"
                layout_alignParentStart="true">
                <ImageView
                    id="@+id/iv_list_item_statement_expense_icon_1"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_alignParentStart="true"/>
                <ImageView
                    id="@+id/iv_list_item_statement_expense_icon_2"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_toEndOf="@+id/iv_list_item_statement_expense_icon_1"/>
                <ImageView
                    id="@+id/iv_list_item_statement_expense_icon_3"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_toEndOf="@+id/iv_list_item_statement_expense_icon_2"/>
                <ImageView
                    id="@+id/iv_list_item_statement_expense_icon_4"
                    background="@drawable/bg_circle_white"
                    padding="2dp"
                    visibility="invisible"
                    layout_width="15dp"
                    layout_height="15dp"
                    layout_margin="2dp"
                    src="@drawable/ic_gift_orange"
                    scaleType="fitXY"
                    layout_toEndOf="@+id/iv_list_item_statement_expense_icon_3"/>
            </RelativeLayout>
            <TextView
                textStyle="bold"
                id="@+id/tv_dana_statement_medium_title_month"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="8dp"
                text=""
                layout_alignParentTop="true"
                layout_marginStart="8dp"
                layout_marginEnd="4dp"
                layout_alignParentStart="true"
                style="@style/2132017438"/>
            <TextView
                id="@+id/tv_dana_statement_medium_date"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="2dp"
                text=""
                layout_below="@+id/tv_dana_statement_medium_title_month"
                layout_marginStart="8dp"
                style="@style/2132017430"/>
            <TextView
                textSize="8sp"
                id="@+id/tv_dana_statement_medium_income_label"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                text="@string/widget_statement_income_label"
                layout_alignParentTop="true"
                layout_marginStart="156dp"
                layout_alignParentStart="true"
                style="@style/2132017430"/>
            <TextView
                textStyle="bold"
                id="@+id/tv_dana_statement_medium_income_balance_amount"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="@string/widget_balance_placeholder"
                layout_below="@+id/tv_dana_statement_medium_income_label"
                layout_marginStart="156dp"
                layout_alignParentStart="true"
                style="@style/2132017430"/>
            <TextView
                textSize="8sp"
                id="@+id/tv_dana_statement_medium_expense_label"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                text="@string/widget_statement_expense_label"
                layout_below="@+id/lv_dana_statement_medium_income_list"
                layout_marginStart="156dp"
                layout_alignParentStart="true"
                style="@style/2132017430"/>
            <TextView
                textStyle="bold"
                id="@+id/tv_dana_statement_medium_expense_balance_amount"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="@string/widget_balance_placeholder"
                layout_below="@+id/tv_dana_statement_medium_expense_label"
                layout_marginStart="156dp"
                layout_alignParentStart="true"
                style="@style/2132017430"/>
        </RelativeLayout>
        <include layout="@layout/widget_login_view"/>
        <include layout="@layout/widget_dana_statement_medium_shimmer"/>
    </ViewFlipper>
</FrameLayout>
