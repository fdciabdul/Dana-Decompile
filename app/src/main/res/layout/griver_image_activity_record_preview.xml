<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="@android:color/transparent"
    layout_width="match_parent"
    layout_height="match_parent">
    <com.alibaba.griver.image.capture.widget.CustomBgImageView
        id="@+id/previewIv"
        layout_width="match_parent"
        layout_height="match_parent"/>
    <FrameLayout
        layout_gravity="bottom"
        id="@+id/bottomBar"
        background="#66000000"
        layout_width="match_parent"
        layout_height="42.67dp">
        <TextView
            textSize="15.3dp"
            textColor="#ffffff"
            gravity="center_vertical"
            layout_gravity="center"
            id="@+id/takeAgain"
            layout_width="wrap_content"
            layout_height="match_parent"
            layout_marginLeft="19.3dp"
            text="@string/griver_image_record_again"
            includeFontPadding="false"/>
        <TextView
            textSize="15.3dp"
            textColor="#ffffff"
            gravity="center_vertical"
            layout_gravity="center"
            id="@+id/usePhoto"
            layout_width="wrap_content"
            layout_height="match_parent"
            layout_marginRight="19.3dp"
            text="@string/griver_image_use_photo"
            includeFontPadding="false"/>
    </FrameLayout>
</FrameLayout>
