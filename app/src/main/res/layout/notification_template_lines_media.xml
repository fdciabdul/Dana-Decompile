<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    paddingTop="2dp"
    paddingRight="8dp"
    paddingBottom="2dp"
    layout_width="wrap_content"
    layout_height="wrap_content"
    paddingEnd="8dp">
    <LinearLayout
        orientation="horizontal"
        id="@+id/line1"
        paddingTop="6dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="@dimen/2131165984"
        layout_marginStart="@dimen/2131165984">
        <TextView
            textAppearance="@style/2132017729"
            ellipsize="marquee"
            id="@+id/title"
            fadingEdge="horizontal"
            layout_width="match_parent"
            layout_height="wrap_content"
            singleLine="true"
            layout_weight="1"/>
        <DateTimeView
            textAppearance="@style/2132017727"
            layout_gravity="center"
            id="@+id/time"
            paddingLeft="8dp"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            singleLine="true"
            layout_weight="0"
            paddingStart="8dp"/>
        <Chronometer
            textAppearance="@style/2132017727"
            layout_gravity="center"
            id="@+id/chronometer"
            paddingLeft="8dp"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            singleLine="true"
            layout_weight="0"
            paddingStart="8dp"/>
    </LinearLayout>
    <TextView
        textAppearance="@style/2132017724"
        ellipsize="marquee"
        id="@+id/text2"
        visibility="gone"
        fadingEdge="horizontal"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="@dimen/2131165984"
        layout_marginTop="-2dp"
        layout_marginBottom="-2dp"
        singleLine="true"
        layout_marginStart="@dimen/2131165984"/>
    <LinearLayout
        gravity="center_vertical"
        orientation="horizontal"
        id="@+id/line3"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="@dimen/2131165984"
        layout_marginStart="@dimen/2131165984">
        <TextView
            textAppearance="@style/2132017725"
            ellipsize="marquee"
            layout_gravity="center"
            id="@+id/text"
            fadingEdge="horizontal"
            layout_width="0dp"
            layout_height="wrap_content"
            singleLine="true"
            layout_weight="1"/>
        <TextView
            textAppearance="@style/2132017722"
            gravity="center"
            layout_gravity="center"
            id="@+id/info"
            paddingLeft="8dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            singleLine="true"
            layout_weight="0"
            paddingStart="8dp"/>
    </LinearLayout>
</LinearLayout>
