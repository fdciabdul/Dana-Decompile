<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="match_parent">
    <View
        layout_width="0dp"
        layout_height="0dp"
        layout_weight="1"/>
    <LinearLayout
        gravity="center"
        layout_gravity="center"
        orientation="vertical"
        background="@drawable/acsdk_loading_bg"
        layout_width="90dp"
        layout_height="90dp"
        alpha="0.8">
        <ProgressBar
            layout_gravity="center"
            layout_width="36dp"
            layout_height="36dp"
            indeterminate="true"
            indeterminateDrawable="@drawable/acsdk_anim_progress"/>
        <TextView
            textSize="14sp"
            textColor="#ffffff"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="4dp"
            text="@string/acsdk_loading"/>
    </LinearLayout>
    <View
        layout_width="0dp"
        layout_height="0dp"
        layout_weight="1"/>
</LinearLayout>
