<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    gravity="center"
    orientation="vertical"
    id="@+id/iv_ribbon"
    background="@drawable/img_ribbon_header_right"
    layout_width="wrap_content"
    layout_height="wrap_content">
    <TextView
        textSize="12sp"
        textColor="@android:color/white"
        gravity="center"
        id="@+id/tv_ribbon_lineTop"
        layout_width="wrap_content"
        layout_height="wrap_content"
        text="free transfer"
        singleLine="true"
        includeFontPadding="false"
        textAllCaps="true"
        fontFamily="@font/2131296266"
        textAlignment="center"/>
    <LinearLayout
        gravity="center"
        orientation="horizontal"
        id="@+id/ll_lineBottom"
        visibility="visible"
        layout_width="match_parent"
        layout_height="wrap_content">
        <TextView
            textSize="16sp"
            textStyle="bold"
            textColor="@android:color/white"
            gravity="center"
            layout_gravity="center"
            id="@+id/tv_ribbon_lineBottom"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="100K"
            includeFontPadding="false"
            fontFamily="@font/2131296266"
            textAlignment="center"/>
        <ImageView
            layout_gravity="center"
            id="@+id/CircularRevealCoordinatorLayout"
            visibility="visible"
            layout_width="18dp"
            layout_height="18dp"
            layout_marginLeft="2dp"
            src="@drawable/ic_info_ribbon"
            layout_marginStart="2dp"/>
    </LinearLayout>
</LinearLayout>
