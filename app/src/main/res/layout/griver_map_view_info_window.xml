<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    background="@drawable/griver_map_custom_info_bubble"
    paddingLeft="10dp"
    paddingRight="10dp"
    layout_width="280dp"
    layout_height="wrap_content"
    maxWidth="280dp">
    <LinearLayout
        orientation="horizontal"
        layout_width="match_parent"
        layout_height="wrap_content">
        <LinearLayout
            layout_gravity="center"
            orientation="vertical"
            paddingTop="10dp"
            paddingBottom="10dp"
            layout_width="wrap_content"
            layout_height="wrap_content">
            <TextView
                textSize="16dp"
                textStyle="bold"
                textColor="#ffffffff"
                ellipsize="end"
                id="@+id/title"
                visibility="gone"
                layout_width="wrap_content"
                layout_height="wrap_content"
                maxWidth="195dp"
                singleLine="true"/>
            <TextView
                textSize="16dp"
                textColor="#ffffffff"
                ellipsize="end"
                id="@+id/snippet"
                visibility="gone"
                layout_width="wrap_content"
                layout_height="wrap_content"
                maxWidth="195dp"/>
        </LinearLayout>
        <ImageView
            layout_gravity="center"
            id="@+id/badge"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="13dp"
            src="@drawable/griver_map_icon_goto"
            scaleType="centerInside"
            adjustViewBounds="true"
            contentDescription="@string/griver_map_icon_goto_description"/>
        <ImageView
            layout_gravity="center"
            id="@+id/gototaxi"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="23dp"
            src="@drawable/griver_map_icon_taxi"
            scaleType="centerInside"
            adjustViewBounds="true"
            contentDescription="@string/griver_map_icon_taxi_description"/>
    </LinearLayout>
</LinearLayout>
