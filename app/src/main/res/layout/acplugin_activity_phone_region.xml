<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    background="@android:color/white"
    layout_width="match_parent"
    layout_height="match_parent">
    <com.iap.ac.android.acs.plugin.ui.view.ACPluginActionBar
        id="@+id/action_bar"
        layout_width="match_parent"
        layout_height="wrap_content"/>
    <com.iap.ac.android.acs.plugin.ui.view.ACPluginSearchBar
        textSize="14dp"
        textColor="#333"
        textColorHint="#bfbfbf"
        ellipsize="end"
        gravity="center_vertical"
        id="@+id/search_bar"
        background="@drawable/acplugin_search_bar_bg"
        paddingLeft="12dp"
        paddingRight="12dp"
        focusable="true"
        layout_width="match_parent"
        layout_height="40dp"
        layout_marginLeft="12dp"
        layout_marginTop="12dp"
        layout_marginRight="12dp"
        maxLines="1"
        textCursorDrawable="@drawable/acplugin_edit_text_placeholder"/>
    <FrameLayout
        layout_width="match_parent"
        layout_height="match_parent"
        layout_marginTop="20dp">
        <ListView
            id="@+id/phone_region_list"
            background="@android:color/white"
            scrollbars="none"
            layout_width="match_parent"
            layout_height="match_parent"
            listSelector="@android:color/transparent"
            divider="@null"/>
        <TextView
            textSize="16dp"
            textColor="#bfbfbf"
            layout_gravity="center_horizontal"
            id="@+id/list_empty_hint_text"
            layout_width="wrap_content"
            layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
