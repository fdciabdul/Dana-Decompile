<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/status_bar_latest_event_content"
    layout_width="match_parent"
    layout_height="128dp">
    <ImageView
        id="@+id/icon"
        layout_width="128dp"
        layout_height="128dp"
        scaleType="centerCrop"/>
    <include
        layout_width="48dp"
        layout_height="48dp"
        layout_marginLeft="2dp"
        layout_marginRight="2dp"
        layout_alignParentRight="true"
        layout_alignParentEnd="true"
        layout="@layout/notification_media_cancel_action"/>
    <include
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="128dp"
        layout_toLeftOf="@+id/cancel_action"
        layout_marginStart="128dp"
        layout_toStartOf="@+id/cancel_action"
        layout="@layout/notification_template_lines_media"/>
    <LinearLayout
        orientation="horizontal"
        id="@+id/media_actions"
        layout_width="match_parent"
        layout_height="48dp"
        layout_marginLeft="12dp"
        layout_marginRight="12dp"
        layout_toRightOf="@+id/icon"
        layout_alignParentBottom="true"
        layoutDirection="ltr"
        layout_toEndOf="@+id/icon"/>
    <ImageView
        id="@+id/action_divider"
        background="?android:attr/dividerHorizontal"
        layout_width="match_parent"
        layout_height="1dp"
        layout_toRightOf="@+id/icon"
        layout_above="@+id/media_actions"
        layout_toEndOf="@+id/icon"/>
</RelativeLayout>
