<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    padding="8dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <ViewFlipper
        id="@+id/vf_quick_action"
        layout_width="match_parent"
        layout_height="wrap_content"
        measureAllChildren="true">
        <RelativeLayout
            background="@drawable/bg_rounded_blue_50_12dp"
            layout_width="match_parent"
            layout_height="wrap_content">
            <ImageView
                id="@+id/iv_widget_quick_action_logo"
                layout_width="16dp"
                layout_height="16dp"
                layout_marginTop="13dp"
                src="@drawable/ic_logo_dana_coin_white"
                layout_alignParentTop="true"
                layout_marginStart="8dp"
                layout_alignParentStart="true"/>
            <ImageButton
                id="@+id/ib_widget_quick_action_refresh"
                background="@android:color/transparent"
                layout_width="16dp"
                layout_height="16dp"
                layout_marginTop="8dp"
                src="@drawable/ic_refresh_24dp"
                scaleType="fitCenter"
                tint="#ffffff"
                layout_alignParentTop="true"
                layout_marginEnd="8dp"
                layout_alignParentEnd="true"/>
            <TextView
                id="@+id/tv_quick_action_balance_label"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="12dp"
                text="@string/widget_balance_label"
                paddingStart="4dp"
                paddingEnd="4dp"
                layout_toEndOf="@+id/iv_widget_quick_action_logo"
                style="@style/2132017438"/>
            <TextView
                id="@+id/tv_quick_action_balance_amount_currency"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                text="@string/rupiah_short"
                layout_below="@+id/tv_quick_action_balance_label"
                alpha="0.5"
                paddingStart="8dp"
                paddingEnd="4dp"
                style="@style/2132017907"/>
            <TextView
                textStyle="bold"
                id="@+id/tv_quick_action_balance_amount"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                text="@string/widget_balance_amount_placeholder"
                layout_toRightOf="@+id/tv_quick_action_balance_amount_currency"
                layout_below="@+id/tv_quick_action_balance_label"
                style="@style/2132017907"/>
            <include
                id="@+id/btn_quick_action_pay"
                layout_width="match_parent"
                layout_height="44dp"
                layout_marginTop="12dp"
                layout_marginBottom="12dp"
                layout_below="@+id/tv_quick_action_balance_amount_currency"
                layout_marginStart="8dp"
                layout_marginEnd="8dp"
                layout="@layout/widget_action_button"/>
        </RelativeLayout>
        <include layout="@layout/widget_login_view"/>
        <include layout="@layout/widget_dana_quick_action_shimmer"/>
    </ViewFlipper>
</FrameLayout>
