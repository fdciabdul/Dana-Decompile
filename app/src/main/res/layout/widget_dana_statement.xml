<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    padding="8dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <ViewFlipper
        id="@+id/vf_dana_statement_expense"
        layout_width="match_parent"
        layout_height="wrap_content"
        measureAllChildren="true">
        <RelativeLayout
            id="@+id/vg_dana_statement_widget_root"
            background="@drawable/bg_rounded_blue_50_12dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            minHeight="110dp">
            <ImageView
                id="@+id/iv_dana_statement_logo"
                layout_width="16dp"
                layout_height="16dp"
                layout_marginTop="12dp"
                src="@drawable/ic_logo_dana_coin_white"
                layout_alignParentTop="true"
                layout_marginStart="8dp"
                layout_alignParentStart="true"/>
            <ImageButton
                id="@+id/ib_dana_statement_refresh"
                background="@android:color/transparent"
                layout_width="16dp"
                layout_height="16dp"
                layout_marginTop="8dp"
                src="@drawable/ic_refresh_24dp"
                scaleType="fitCenter"
                tint="#ffffff"
                layout_alignParentTop="true"
                layout_marginEnd="8dp"
                layout_alignParentEnd="true"/>
            <TextView
                id="@+id/tv_quick_action_balance_label"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="12dp"
                text="@string/widget_statement_expense_label"
                paddingStart="4dp"
                paddingEnd="4dp"
                layout_toEndOf="@+id/iv_dana_statement_logo"
                style="@style/2132017438"/>
            <TextView
                id="@+id/tv_dana_statement_date"
                paddingBottom="8dp"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="4dp"
                layout_below="@+id/tv_quick_action_balance_label"
                paddingStart="8dp"
                paddingEnd="8dp"
                style="@style/2132017430"/>
            <TextView
                textStyle="bold"
                id="@+id/tv_dana_statement_balance_amount"
                paddingBottom="8dp"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="39dp"
                text="@string/widget_balance_placeholder"
                layout_below="@+id/tv_dana_statement_date"
                paddingStart="8dp"
                paddingEnd="8dp"
                style="@style/2132017907"/>
        </RelativeLayout>
        <include layout="@layout/widget_login_view"/>
        <include layout="@layout/widget_dana_shimmer"/>
    </ViewFlipper>
</FrameLayout>
