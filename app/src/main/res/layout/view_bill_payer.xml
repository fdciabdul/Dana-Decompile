<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_gravity="bottom"
    id="@+id/clPayMethodContainer"
    layout_width="match_parent"
    layout_height="match_parent">
    <androidx.cardview.widget.CardView
        id="@+id/cv_payer_selection"
        clipToPadding="false"
        layout_width="match_parent"
        layout_height="match_parent"
        layout_marginBottom="-16dp"
        divider="@android:color/transparent"
        dividerHeight="0px"
        NOT_FOUND_0x21="true"
        NOT_FOUND_0x22="0dp"
        NOT_FOUND_0x23="16dp"
        NOT_FOUND_0x24="4dp"
        NOT_FOUND_0x26="com.google.android.material.bottomsheet.BottomSheetBehavior"
        NOT_FOUND_0x27="0">
        <ImageView
            layout_gravity="center_horizontal"
            layout_width="36dp"
            layout_height="4dp"
            layout_marginTop="16dp"
            NOT_FOUND_0x2a="@drawable/ic_flat_dark"/>
        <RelativeLayout
            paddingBottom="16dp"
            layout_width="match_parent"
            layout_height="wrap_content">
            <LinearLayout
                orientation="vertical"
                layout_width="match_parent"
                layout_height="match_parent"
                layout_above="@+id/ll_btn_container">
                <TextView
                    textSize="20sp"
                    textColor="@android:color/black"
                    gravity="center_horizontal"
                    id="@+id/tv_bill_payer_header_msg"
                    paddingTop="36dp"
                    layout_width="match_parent"
                    layout_height="wrap_content"
                    text="@string/selection_split_bill_payer_title"
                    fontFamily="@font/2131296266"
                    paddingStart="16dp"
                    paddingEnd="16dp"/>
                <id.dana.richview.splitbill.SelectedPayerView
                    id="@+id/view_selected_payer"
                    layout_width="match_parent"
                    layout_height="wrap_content"/>
                <id.dana.richview.SearchView
                    id="@+id/res_0x7f0a1b79_com_alibaba_ariver_engine_api_extopt_6"
                    paddingLeft="16dp"
                    paddingTop="16dp"
                    paddingRight="16dp"
                    paddingBottom="8dp"
                    layout_width="match_parent"
                    layout_height="wrap_content"
                    contentDescription="@string/txtSearch"
                    NOT_FOUND_0x20="@drawable/selector_et_search_light"
                    NOT_FOUND_0x2b="@string/split_bill_search_phone_number"/>
                <id.dana.richview.contactselector.ContactSelectorView
                    id="@+id/view_contact_selector"
                    layout_width="match_parent"
                    layout_height="wrap_content"
                    NOT_FOUND_0x25="0"
                    NOT_FOUND_0x28="true"
                    NOT_FOUND_0x29="true"/>
            </LinearLayout>
            <LinearLayout
                id="@+id/ll_btn_container"
                background="@android:color/white"
                paddingLeft="16dp"
                paddingTop="8dp"
                paddingRight="16dp"
                paddingBottom="16dp"
                visibility="gone"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_alignParentBottom="true">
                <Button
                    textSize="16sp"
                    id="@+id/btn_cancel"
                    layout_width="0dp"
                    layout_height="wrap_content"
                    layout_marginRight="4dp"
                    minHeight="40dp"
                    text="@string/option_cancel"
                    layout_weight="1"
                    contentDescription="@string/btnCancel"
                    layout_marginEnd="4dp"
                    style="@style/2132017615"/>
                <Button
                    textSize="16sp"
                    id="@+id/btn_done"
                    layout_width="0dp"
                    layout_height="wrap_content"
                    layout_marginLeft="4dp"
                    minHeight="40dp"
                    text="@string/option_done"
                    layout_weight="1"
                    contentDescription="@string/btnSelectParticipant"
                    layout_marginStart="4dp"
                    style="@style/2132017655"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
