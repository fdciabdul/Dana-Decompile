<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_gravity="center"
    orientation="vertical"
    background="@android:color/white"
    paddingLeft="60dp"
    paddingRight="60dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <RelativeLayout
        layout_gravity="center"
        id="@+id/simplePwdLayout"
        layout_width="match_parent"
        layout_height="match_parent">
        <EditText
            textColor="#00000000"
            id="@+id/mini_spwd_input"
            layout_width="wrap_content"
            layout_height="match_parent"
            layout_marginLeft="10dp"
            cursorVisible="false"
            password="true"
            android:maxLength="6"
            inputType="numberPassword"/>
        <LinearLayout
            layout_gravity="center_vertical"
            orientation="horizontal"
            id="@+id/mini_linSimplePwdComponent"
            background="@android:color/white"
            layout_width="match_parent"
            layout_height="match_parent">
            <RelativeLayout
                id="@+id/mini_spwd_rl_1"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1">
                <ImageView
                    id="@+id/mini_spwd_iv_1"
                    background="@drawable/password_point"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                id="@+id/mini_spwd_rl_2"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1">
                <ImageView
                    id="@+id/mini_spwd_iv_2"
                    background="@drawable/password_point"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                id="@+id/mini_spwd_rl_3"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1">
                <ImageView
                    id="@+id/mini_spwd_iv_3"
                    background="@drawable/password_point"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                id="@+id/mini_spwd_rl_4"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1"
                layout_below="@+id/mini_spwd_iv_5"
                layout_alignParentRight="true"
                layout_alignParentEnd="true">
                <ImageView
                    id="@+id/mini_spwd_iv_4"
                    background="@drawable/password_point"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                id="@+id/mini_spwd_rl_5"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1">
                <ImageView
                    id="@+id/mini_spwd_iv_5"
                    background="@drawable/password_point"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    scaleType="fitCenter"
                    layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                id="@+id/mini_spwd_rl_6"
                layout_width="0dp"
                layout_height="match_parent"
                layout_weight="1">
                <ImageView
                    id="@+id/mini_spwd_iv_6"
                    background="@drawable/password_point"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
