<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/lyt_custom_gridview"
    background="#ffffff"
    paddingTop="2dp"
    paddingBottom="4dp"
    layout_width="match_parent"
    layout_height="52dp"
    paddingStart="20dp"
    paddingEnd="6dp">
    <View
        gravity="center"
        layout_gravity="center_vertical"
        id="@+id/v_icon"
        background="@drawable/bg_circle_grey_20"
        layout_width="40dp"
        layout_height="40dp"
        contentDescription="@string/sdet_img_promoted_service_load"/>
    <LinearLayout
        layout_gravity="center_vertical"
        orientation="vertical"
        layout_width="0dp"
        layout_height="wrap_content"
        layout_weight="2"
        layout_marginStart="6dp"
        layout_marginEnd="8dp">
        <View
            id="@+id/v_title"
            background="@drawable/bg_rounded_8dp_grey20"
            layout_width="100dp"
            layout_height="20dp"
            contentDescription="@string/sdet_lbl_promoted_service_header_load"/>
        <View
            id="@+id/v_subtitle"
            background="@drawable/bg_rounded_8dp_grey20"
            layout_width="160dp"
            layout_height="20dp"
            layout_marginTop="2dp"
            contentDescription="@string/sdet_lbl_promoted_service_sub_header_load"/>
    </LinearLayout>
    <View
        layout_gravity="center_vertical"
        id="@+id/v_button"
        background="@drawable/bg_rounded_8dp_grey20"
        layout_width="76dp"
        layout_height="32dp"/>
</LinearLayout>
