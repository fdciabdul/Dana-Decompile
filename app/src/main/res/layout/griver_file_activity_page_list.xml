<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    background="#eeeeee"
    layout_width="match_parent"
    layout_height="match_parent">
    <com.alibaba.griver.ui.ant.AUTitleBar
        id="@+id/title_bar"
        layout_width="match_parent"
        layout_height="wrap_content"/>
    <FrameLayout
        layout_width="match_parent"
        layout_height="0dp"
        layout_weight="1">
        <com.alibaba.griver.file.ui.ZoomRecyclerView
            id="@+id/list"
            layout_width="match_parent"
            layout_height="match_parent"/>
        <com.alibaba.griver.ui.ant.layout.AULinearLayout
            gravity="center_horizontal"
            orientation="vertical"
            id="@+id/ll_file_not_support"
            background="#ffffff"
            layout_width="match_parent"
            layout_height="match_parent">
            <com.alibaba.griver.ui.ant.AUImageView
                layout_width="55dp"
                layout_height="55dp"
                layout_marginTop="90dp"
                src="@drawable/griver_file_not_support"/>
            <com.alibaba.griver.ui.ant.text.AUTextView
                textSize="20dp"
                textColor="#d9040f24"
                gravity="center_horizontal"
                id="@+id/tv_filename"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="26dp"/>
            <com.alibaba.griver.ui.ant.text.AUTextView
                textSize="16dp"
                textColor="#d9040f24"
                gravity="center_horizontal"
                layout_width="wrap_content"
                layout_height="0dp"
                layout_marginTop="16dp"
                text="@string/griver_unable_to_open_file_desc"
                layout_weight="1"
                lineSpacingMultiplier="1.5"
                layout_marginStart="33dp"
                layout_marginEnd="33dp"/>
            <com.alibaba.griver.ui.ant.text.AUTextView
                textSize="17dp"
                textColor="#ffffff"
                gravity="center"
                id="@+id/tv_share_btn"
                background="@drawable/open_btn_background"
                layout_width="183dp"
                layout_height="48dp"
                layout_marginBottom="150dp"
                text="@string/griver_open_file_with"/>
        </com.alibaba.griver.ui.ant.layout.AULinearLayout>
    </FrameLayout>
</LinearLayout>
