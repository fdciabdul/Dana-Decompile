<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/cl_view_nav"
    layout_width="match_parent"
    layout_height="56dp">
    <ImageView
        layout_gravity="center_horizontal"
        id="@+id/nav_tab_icon"
        layout_width="24dp"
        layout_height="24dp"
        layout_marginTop="8dp"
        layout_marginBottom="4dp"
        layout_alignParentTop="true"
        layout_centerHorizontal="true"
        contentDescription="@string/navigation_tab_icon"/>
    <TextView
        textSize="12sp"
        textColor="@drawable/nav_title_color"
        gravity="center"
        layout_gravity="center_horizontal"
        id="@+id/nav_tab_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginBottom="4dp"
        layout_below="@+id/nav_tab_icon"
        layout_alignParentBottom="true"
        layout_centerHorizontal="true"
        lineSpacingExtra="4sp"
        fontFamily="@font/2131296265"/>
    <TextView
        textSize="10sp"
        textStyle="bold"
        textColor="#ffffff"
        gravity="center"
        id="@+id/nav_tab_notif"
        background="@drawable/notification_trx"
        paddingLeft="4sp"
        paddingRight="4sp"
        visibility="gone"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginLeft="15dp"
        layout_alignParentTop="true"
        layout_marginStart="15dp"
        layout_alignStart="@+id/nav_tab_icon"
        style="@style/2132018187"/>
</RelativeLayout>
