<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    gravity="center_vertical"
    background="@drawable/griver_image_bucket_item_bg"
    paddingLeft="16dp"
    paddingRight="26.6dp"
    layout_width="match_parent"
    layout_height="100dp">
    <RelativeLayout
        id="@+id/rl_photo"
        layout_width="85dp"
        layout_height="85dp"
        layout_centerVertical="true">
        <ImageView
            background="@drawable/griver_image_album_item_bg"
            layout_width="match_parent"
            layout_height="match_parent"
            scaleType="fitCenter"/>
        <ImageView
            id="@+id/iv_album"
            layout_width="match_parent"
            layout_height="match_parent"
            layout_marginRight="5dp"
            layout_marginBottom="5dp"
            scaleType="centerCrop"/>
    </RelativeLayout>
    <LinearLayout
        gravity="center_vertical"
        orientation="vertical"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="5dp"
        layout_toRightOf="@+id/rl_photo"
        layout_centerVertical="true">
        <TextView
            textSize="17dp"
            textColor="@android:color/black"
            id="@+id/tv_album_name"
            layout_width="wrap_content"
            layout_height="wrap_content"/>
        <TextView
            textSize="13dp"
            id="@+id/tv_album_count"
            layout_width="wrap_content"
            layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        id="@+id/iv_selected"
        layout_width="20dp"
        layout_height="20dp"
        src="@drawable/griver_image_album_selected"
        layout_alignParentRight="true"
        layout_centerVertical="true"/>
</RelativeLayout>
