<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    background="@drawable/rounded_grey_nearby_merchant_card"
    padding="16dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    layout_marginLeft="16dp"
    layout_marginTop="8dp"
    layout_marginRight="16dp"
    layout_marginBottom="8dp"
    layout_marginStart="16dp"
    layout_marginEnd="16dp">
    <TextView
        textSize="14sp"
        textColor="#000000"
        id="@+id/tv_nearby_promo_title"
        layout_width="match_parent"
        layout_height="wrap_content"
        maxLines="2"
        fontFamily="@font/2131296266"
        NOT_FOUND_0x1c="0"
        NOT_FOUND_0x1e="0"/>
    <ImageView
        id="@+id/iv_nearby_gift"
        layout_width="24dp"
        layout_height="24dp"
        layout_marginTop="16dp"
        src="@drawable/ic_gift_orange"
        NOT_FOUND_0x1c="0"
        NOT_FOUND_0x1d="@+id/tv_nearby_promo_title"/>
    <TextView
        textSize="12sp"
        id="@+id/tv_maximum_cashback_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="12dp"
        text="@string/maximum_benefit"
        fontFamily="@font/2131296265"
        layout_marginStart="8dp"
        NOT_FOUND_0x1b="@+id/iv_nearby_gift"
        NOT_FOUND_0x1d="@+id/tv_nearby_promo_title"/>
    <TextView
        textSize="12sp"
        textColor="#fb8b01"
        id="@+id/tv_maximum_cashback_value"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="2dp"
        fontFamily="@font/2131296265"
        layout_marginStart="8dp"
        NOT_FOUND_0x1b="@+id/iv_nearby_gift"
        NOT_FOUND_0x1d="@+id/tv_maximum_cashback_title"/>
    <ImageView
        id="@+id/iv_nearby_cash"
        layout_width="24dp"
        layout_height="24dp"
        layout_marginTop="16dp"
        src="@drawable/ic_money_orange"
        NOT_FOUND_0x1c="0"
        NOT_FOUND_0x1d="@+id/tv_maximum_cashback_value"/>
    <TextView
        textSize="12sp"
        id="@+id/tv_purchase_minimum_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        text="@string/purchase_minimum"
        fontFamily="@font/2131296265"
        layout_marginStart="8dp"
        NOT_FOUND_0x1b="@+id/iv_nearby_gift"
        NOT_FOUND_0x1d="@+id/tv_maximum_cashback_value"/>
    <TextView
        textSize="12sp"
        textColor="#fb8b01"
        id="@+id/tv_purchase_minimum_value"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="2dp"
        fontFamily="@font/2131296265"
        layout_marginStart="8dp"
        NOT_FOUND_0x1b="@+id/iv_nearby_gift"
        NOT_FOUND_0x1d="@+id/tv_purchase_minimum_title"/>
    <LinearLayout
        orientation="horizontal"
        id="@+id/ll_nearby_promo_expand_swith"
        background="?attr/2130969991"
        paddingLeft="6dp"
        paddingTop="4dp"
        paddingRight="6dp"
        paddingBottom="4dp"
        layout_width="wrap_content"
        layout_height="wrap_content"
        NOT_FOUND_0x1a="0"
        NOT_FOUND_0x1e="@+id/tv_purchase_minimum_value">
        <TextView
            textSize="10sp"
            textColor="#108ee9"
            id="@+id/tv_nearby_promo_expand_swith"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/more_info_promo"
            textAllCaps="true"
            fontFamily="@font/2131296266"
            layout_marginEnd="4dp"/>
        <ImageView
            layout_gravity="center"
            id="@+id/iv_nearby_promo_expand_swith_arrow"
            layout_width="12dp"
            layout_height="12dp"
            src="@drawable/ic_arrow_blue_down"/>
    </LinearLayout>
    <LinearLayout
        orientation="vertical"
        id="@+id/ll_nearby_promo_expand"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="18dp"
        NOT_FOUND_0x19="0"
        NOT_FOUND_0x1c="0"
        NOT_FOUND_0x1d="@+id/ll_nearby_promo_expand_swith">
        <View
            id="@+id/tv_nearby_promo_expand_line"
            background="#19000000"
            layout_width="match_parent"
            layout_height="1px"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1e="0"/>
        <TextView
            textSize="11sp"
            id="@+id/tv_nearby_promo_period_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="13dp"
            text="@string/promo_period"
            fontFamily="@font/2131296265"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_expand_line"/>
        <TextView
            textSize="12sp"
            textColor="#3b3b3b"
            id="@+id/tv_nearby_promo_period_value"
            layout_width="wrap_content"
            layout_height="wrap_content"
            fontFamily="@font/2131296266"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_period_title"/>
        <TextView
            textSize="11sp"
            id="@+id/tv_nearby_promo_use_limit_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="10dp"
            text="@string/use_limit"
            fontFamily="@font/2131296265"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_period_value"/>
        <TextView
            textSize="12sp"
            textColor="#3b3b3b"
            id="@+id/tv_nearby_promo_use_limit_value"
            layout_width="wrap_content"
            layout_height="wrap_content"
            fontFamily="@font/2131296266"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_use_limit_title"/>
        <TextView
            textSize="11sp"
            id="@+id/tv_nearby_promo_payment_method_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="10dp"
            text="@string/payment_method"
            fontFamily="@font/2131296265"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_use_limit_value"/>
        <TextView
            textSize="12sp"
            textColor="#3b3b3b"
            id="@+id/tv_nearby_promo_payment_method_value"
            layout_width="wrap_content"
            layout_height="wrap_content"
            fontFamily="@font/2131296266"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_payment_method_title"/>
        <TextView
            textSize="11sp"
            id="@+id/tv_nearby_promo_term_and_condition"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="10dp"
            text="@string/term_condition"
            fontFamily="@font/2131296265"
            NOT_FOUND_0x1c="0"
            NOT_FOUND_0x1d="@+id/tv_nearby_promo_payment_method_value"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
