<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    id="@+id/home_widget_base"
    background="@drawable/bg_home_widget_white_rounded"
    paddingTop="12dp"
    paddingBottom="12dp"
    clipChildren="false"
    clipToPadding="false"
    layout_width="match_parent"
    layout_height="wrap_content"
    layout_marginTop="4dp"
    layout_marginBottom="4dp"
    layout_marginStart="12dp"
    layout_marginEnd="12dp">
    <include
        id="@+id/v_header_with_action"
        layout="@layout/view_header_with_action"/>
    <RelativeLayout
        id="@+id/cl_map_section"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="12dp"
        layout_marginTop="8dp"
        layout_marginRight="12dp">
        <TextView
            id="@+id/tv_current_location_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="12dp"
            text="@string/nearby_me_widget_current_location_label"
            style="@style/2132017900"/>
        <TextView
            id="@+id/tv_current_location"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="12dp"
            layout_toRightOf="@+id/tv_current_location_title"
            layout_marginStart="4dp"
            NOT_FOUND_0x16="0"
            style="@style/2132017439"/>
        <androidx.appcompat.widget.AppCompatImageView
            layout_width="16dp"
            layout_height="16dp"
            layout_marginTop="12dp"
            layout_toRightOf="@+id/tv_current_location"
            layout_marginEnd="4dp"
            NOT_FOUND_0x16="0"
            NOT_FOUND_0x17="@drawable/ic_location_filled"/>
        <androidx.appcompat.widget.AppCompatImageView
            id="@+id/iv_widget_map"
            background="@drawable/home_component_border"
            padding="1dp"
            layout_width="match_parent"
            layout_height="88dp"
            layout_below="@+id/tv_current_location"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/rv_nearby_shop"
        clipToPadding="false"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        paddingStart="8dp"
        paddingEnd="8dp"/>
    <include
        id="@+id/view_nearby_location_permission_state"
        visibility="gone"
        layout="@layout/layout_location_permission_state_nearby"/>
    <include
        id="@+id/view_nearby_empty_state"
        visibility="gone"
        layout="@layout/new_layout_empty_state_nearby"/>
</LinearLayout>
