<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    background="@drawable/bg_home_widget_white_rounded"
    paddingTop="12dp"
    paddingBottom="12dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    layout_marginLeft="12dp"
    layout_marginTop="4dp"
    layout_marginRight="12dp">
    <RelativeLayout
        id="@+id/cl_promo_banner_header"
        layout_width="match_parent"
        layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_promo_banner_widget_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/promo_center_entry_title"
            layout_alignParentTop="true"
            layout_marginStart="12dp"
            layout_alignParentStart="true"
            style="@style/2132017916"/>
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_promo_banner_widget_description"
            layout_width="0dp"
            layout_height="wrap_content"
            text="@string/promo_center_entry_description"
            layout_toLeftOf="@+id/view_custom_button_see_all_promo"
            layout_below="@+id/tv_promo_banner_widget_title"
            layout_marginStart="12dp"
            layout_alignParentStart="true"
            style="@style/2132017439"/>
        <id.dana.promocenter.views.PromoCenterSeePromosView
            id="@+id/view_custom_button_see_all_promo"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="4dp"
            layout_alignParentTop="true"
            layout_marginEnd="12dp"
            layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/rv_news_list"
        paddingTop="12dp"
        scrollbars="none"
        clipToPadding="false"
        paddingStart="1dp"
        paddingEnd="1dp"
        style="@style/2132017490"/>
    <id.dana.component.buttoncomponent.DanaButtonSecondaryView
        layout_gravity="center"
        id="@+id/btn_view_all_news"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        layout_marginStart="24dp"
        layout_marginEnd="24dp"
        NOT_FOUND_0x22="10"
        NOT_FOUND_0x23="@string/see_all_news"
        NOT_FOUND_0x24="1"/>
    <com.google.android.material.card.MaterialCardView
        id="@+id/cv_error_load_news"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="12dp"
        layout_marginTop="16dp"
        layout_marginRight="12dp"
        layout_marginHorizontal="@dimen/2131165267"
        NOT_FOUND_0x1c="8dp"
        NOT_FOUND_0x1d="0dp"
        NOT_FOUND_0x1e="@dimen/BuiltInFictitiousFunctionClassFactory_res_0x7f070055"
        NOT_FOUND_0x26="@color/2131099990"
        NOT_FOUND_0x27="1dp">
        <LinearLayout
            gravity="center_horizontal"
            orientation="vertical"
            layout_width="match_parent"
            layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                id="@+id/iv_error_news"
                layout_width="64dp"
                layout_height="64dp"
                layout_marginTop="12dp"
                scaleType="fitCenter"
                NOT_FOUND_0x25="@drawable/ic_network_error"/>
            <androidx.appcompat.widget.AppCompatTextView
                id="@+id/tv_error_news"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginTop="8dp"
                text="@string/news_error_description"
                textAlignment="center"
                style="@style/2132017440"/>
            <id.dana.component.buttoncomponent.DanaButtonPrimaryView
                id="@+id/btn_retry_news"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="12dp"
                NOT_FOUND_0x1f="10"
                NOT_FOUND_0x20="@string/retry_news"
                NOT_FOUND_0x21="1"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
