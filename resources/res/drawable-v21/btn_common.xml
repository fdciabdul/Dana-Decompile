<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item state_enabled="true">
        <ripple color="#e6e6e6">
            <item id="@android:id/background">
                <shape shape="rectangle">
                    <solid color="#108ee9"/>
                    <corners radius="4dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item state_enabled="false">
        <shape shape="rectangle">
            <solid color="#b6b6b6"/>
            <corners radius="4dp"/>
        </shape>
    </item>
</selector>
