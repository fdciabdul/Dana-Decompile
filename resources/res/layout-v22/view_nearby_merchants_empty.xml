<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    gravity="center"
    orientation="vertical"
    id="@+id/llMerchantListEmptyState"
    paddingLeft="16dp"
    paddingTop="24dp"
    paddingRight="16dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    paddingHorizontal="16dp">
    <ImageView
        layout_width="96dp"
        layout_height="96dp"
        NOT_FOUND_0x10="@drawable/img_empty_state"/>
    <TextView
        textSize="20sp"
        textColor="@android:color/black"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="16dp"
        text="@string/nearby_no_merchant_list_view_title"
        fontFamily="@font/2131296266"/>
    <TextView
        textSize="16sp"
        textColor="#727272"
        tag="@string/error_message_tag"
        layout_width="295dp"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        text="@string/nearby_no_merchant_list_view_desc"
        fontFamily="@font/2131296265"
        textAlignment="center"/>
</LinearLayout>
