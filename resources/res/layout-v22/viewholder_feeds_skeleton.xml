<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    paddingTop="16dp"
    paddingBottom="16dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    paddingStart="16dp"
    paddingVertical="16dp">
    <View
        id="@+id/vAvatarSkeleton"
        background="@drawable/bg_circle_skeleton"
        layout_width="48dp"
        layout_height="48dp"
        NOT_FOUND_0xe="0"
        NOT_FOUND_0x10="0"/>
    <View
        id="@+id/vNameSkeleton"
        background="@drawable/bg_rounded_grey_6dp"
        layout_width="110dp"
        layout_height="18dp"
        layout_marginStart="8dp"
        NOT_FOUND_0xd="@+id/vAvatarSkeleton"
        NOT_FOUND_0x10="0"/>
    <View
        id="@+id/vCaptionSkeleton"
        background="@drawable/bg_rounded_grey_6dp"
        layout_width="251dp"
        layout_height="18dp"
        layout_marginTop="4dp"
        NOT_FOUND_0xe="@+id/vNameSkeleton"
        NOT_FOUND_0xf="@+id/vNameSkeleton"/>
    <View
        id="@+id/vWidgetSkeleton"
        background="@drawable/bg_rounded_grey_6dp"
        layout_width="287dp"
        layout_height="64dp"
        layout_marginTop="12dp"
        NOT_FOUND_0xe="@+id/vNameSkeleton"
        NOT_FOUND_0xf="@+id/vCaptionSkeleton"/>
    <View
        id="@+id/vInfoSkeleton"
        background="@drawable/bg_rounded_grey_6dp"
        layout_width="156dp"
        layout_height="16dp"
        layout_marginTop="28dp"
        NOT_FOUND_0xe="@+id/vNameSkeleton"
        NOT_FOUND_0xf="@+id/vWidgetSkeleton"/>
    <View
        id="@+id/vSaymojiSkeleton"
        background="@drawable/bg_rounded_grey_6dp"
        layout_width="28dp"
        layout_height="28dp"
        layout_marginTop="16dp"
        layout_marginEnd="12dp"
        NOT_FOUND_0xc="@+id/vCommentSkeleton"
        NOT_FOUND_0xf="@+id/vWidgetSkeleton"/>
    <View
        id="@+id/vCommentSkeleton"
        background="@drawable/bg_rounded_grey_6dp"
        layout_width="28dp"
        layout_height="28dp"
        layout_marginTop="16dp"
        layout_marginEnd="16dp"
        NOT_FOUND_0xb="0"
        NOT_FOUND_0xf="@+id/vWidgetSkeleton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
