<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    clipToPadding="false"
    layout_width="match_parent"
    layout_height="wrap_content"
    layout_marginTop="4dp">
    <com.google.android.material.textfield.TextInputLayout
        id="@+id/tilEktp"
        background="#ffffff"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x1b="2"
        NOT_FOUND_0x1c="@color/2131099993"
        NOT_FOUND_0x1e="false"
        NOT_FOUND_0x20="0">
        <com.google.android.material.textfield.TextInputEditText
            textColorHint="#d1d1d1"
            id="@+id/etEktp"
            background="@drawable/selector_et_box_yellow"
            paddingLeft="12dp"
            paddingTop="12dp"
            paddingRight="12dp"
            paddingBottom="12dp"
            focusableInTouchMode="true"
            layout_width="match_parent"
            layout_height="wrap_content"
            hint="@string/please_enter_your_ktp"
            maxLines="1"
            includeFontPadding="false"
            android:maxLength="16"
            digits="1234567890"
            inputType="number"
            imeOptions="actionNext"
            contentDescription="@string/txt_ktp"
            textCursorDrawable="@drawable/cursor_tangerine"
            paddingHorizontal="@dimen/2131165267"
            paddingVertical="@dimen/2131165267"
            NOT_FOUND_0x18="@dimen/res_0x7f07011f_kclassimpl_data_declarednonstaticmembers_2"
            NOT_FOUND_0x19="@dimen/2131165468"
            NOT_FOUND_0x1a="1"
            NOT_FOUND_0x1d="@null"
            style="@style/2132017413"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatTextView
        id="@+id/tvErrorCard"
        visibility="visible"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x1f="@+id/tilEktp"
        style="@style/2132017435"/>
</androidx.constraintlayout.widget.ConstraintLayout>
