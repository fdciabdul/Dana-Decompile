<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item state_selected="true">
        <shape shape="rectangle">
            <corners radius="12dp"/>
            <solid color="#e6f5ff"/>
            <stroke
                width="1dp"
                color="#108ee9"/>
        </shape>
    </item>
    <item state_pressed="true">
        <shape shape="rectangle">
            <corners radius="12dp"/>
            <solid color="#e6f5ff"/>
            <stroke
                width="1dp"
                color="#108ee9"/>
        </shape>
    </item>
    <item state_enabled="true">
        <shape shape="rectangle">
            <corners radius="12dp"/>
            <stroke
                width="1dp"
                color="#e3e3e3"/>
        </shape>
    </item>
    <item state_enabled="false">
        <shape shape="rectangle">
            <corners radius="12dp"/>
            <stroke
                width="1dp"
                color="#e3e3e3"/>
        </shape>
    </item>
</selector>
