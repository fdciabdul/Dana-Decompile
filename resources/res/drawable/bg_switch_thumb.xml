<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item state_checked="false">
        <shape shape="oval">
            <size
                height="32dp"
                width="32dp"/>
            <solid color="#ffffff"/>
            <stroke
                width="2dp"
                color="#bfbfbf"/>
        </shape>
    </item>
    <item state_checked="true">
        <shape shape="oval">
            <size
                height="32dp"
                width="32dp"/>
            <solid color="#ffffff"/>
            <stroke
                width="2dp"
                color="#108ee9"/>
        </shape>
    </item>
</selector>
