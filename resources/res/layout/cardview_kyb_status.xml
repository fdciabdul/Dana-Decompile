<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="@drawable/btn_friendship_rounded_white"
    paddingTop="5dp"
    paddingBottom="5dp"
    layout_width="match_parent"
    layout_height="wrap_content">
    <ImageView
        id="@+id/ic_image"
        layout_width="40dp"
        layout_height="40dp"
        layout_marginLeft="8dp"
        scaleType="center"/>
    <TextView
        textSize="18sp"
        textColor="#108ee9"
        id="@+id/kyb_status_label"
        layout_toLeftOf="@+id/dot"
        layout_toRightOf="@+id/ic_image"
        layout_centerVertical="true"
        textAlignment="center"
        style="@style/2132018187"/>
    <ImageView
        id="@+id/dot"
        background="@drawable/red_dot"
        visibility="gone"
        layout_width="8dp"
        layout_height="8dp"
        layout_marginTop="8dp"
        layout_marginRight="8dp"
        layout_marginBottom="8dp"
        layout_toLeftOf="@+id/kyb_image_arrow"
        layout_centerVertical="true"
        layout_marginEnd="8dp"/>
    <ImageView
        id="@+id/kyb_image_arrow"
        layout_width="24dp"
        layout_height="24dp"
        layout_marginTop="8dp"
        layout_marginRight="8dp"
        layout_marginBottom="8dp"
        scaleType="center"
        layout_alignParentRight="true"
        layout_centerVertical="true"
        layout_marginEnd="8dp"/>
</RelativeLayout>
