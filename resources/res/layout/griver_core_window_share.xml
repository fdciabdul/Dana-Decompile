<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <RelativeLayout
        background="@drawable/griver_core_title_drawable"
        layout_width="match_parent"
        layout_height="50dp">
        <TextView
            textSize="16sp"
            textColor="#333333"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="16dp"
            text="Share"
            layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        background="#f5f5f5"
        layout_width="match_parent"
        layout_height="110dp">
        <androidx.recyclerview.widget.RecyclerView
            layout_gravity="center"
            id="@+id/recycler_view"
            background="#f5f5f5"
            paddingLeft="10dp"
            paddingRight="10dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        textSize="18sp"
        textColor="#333333"
        gravity="center"
        id="@+id/tv_cancel"
        background="@android:color/white"
        layout_width="match_parent"
        layout_height="60dp"
        text="Cancel"/>
</LinearLayout>
