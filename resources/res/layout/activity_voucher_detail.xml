<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    id="@+id/ll_voucher_content"
    background="#ffffff"
    layout_width="match_parent"
    layout_height="match_parent">
    <include layout="@layout/layout_toolbar"/>
    <TextView
        textSize="12sp"
        textColor="#6e6e6e"
        id="@+id/tv_available"
        background="#fafafa"
        paddingLeft="16dp"
        paddingTop="8dp"
        paddingRight="16dp"
        paddingBottom="8dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="@string/available"
        textAllCaps="true"
        fontFamily="@font/2131296265"
        NOT_FOUND_0x1a="@+id/toolbar_layout"/>
    <View
        id="@+id/view_divider"
        background="#ededed"
        layout_width="match_parent"
        layout_height="1dp"
        NOT_FOUND_0x1a="@+id/tv_available"/>
    <androidx.core.widget.NestedScrollView
        layout_width="match_parent"
        layout_height="0dp"
        fillViewport="true"
        NOT_FOUND_0x19="@+id/view_divider_two"
        NOT_FOUND_0x1a="@+id/view_divider">
        <LinearLayout
            orientation="vertical"
            padding="16dp"
            layout_width="match_parent"
            layout_height="wrap_content">
            <TextView
                textSize="14sp"
                textColor="#4a4a4a"
                id="@+id/tv_wording_voucher_list"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginBottom="16dp"
                text="@string/voucher_available"
                fontFamily="@font/2131296265"/>
            <androidx.recyclerview.widget.RecyclerView
                id="@+id/rv_voucher"
                layout_width="match_parent"
                layout_height="wrap_content"/>
            <TextView
                textSize="16sp"
                textColor="#108ee9"
                gravity="bottom"
                layout_gravity="center"
                id="@+id/tv_all_voucher"
                paddingTop="8dp"
                paddingBottom="8dp"
                visibility="gone"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="8dp"
                layout_marginBottom="8dp"
                text="@string/all_voucher"
                drawableRight="@drawable/ic_arrow_down_long"
                drawablePadding="8dp"
                drawableEnd="@drawable/ic_arrow_down_long"
                fontFamily="@font/2131296265"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        id="@+id/view_divider_two"
        background="#ededed"
        layout_width="match_parent"
        layout_height="1dp"
        NOT_FOUND_0x19="@+id/fl_button_container"/>
    <FrameLayout
        id="@+id/fl_button_container"
        background="#fafafa"
        padding="16dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x18="0">
        <Button
            id="@+id/btn_without_voucher"
            layout_width="match_parent"
            layout_height="wrap_content"
            text="@string/without_voucher"
            textAllCaps="true"
            style="@style/2132017615"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
