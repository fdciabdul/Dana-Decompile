<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    id="@+id/cl_home_referral_container_skeleton"
    background="@drawable/home_component_border"
    layout_width="match_parent"
    layout_height="wrap_content"
    layout_marginTop="4dp">
    <ImageView
        id="@+id/iv_home_referral_banner_skeleton"
        background="@drawable/square_top_rounded_skeleton"
        layout_width="match_parent"
        layout_height="0dp"
        NOT_FOUND_0x11="H,3.9:1"
        NOT_FOUND_0x14="0"
        NOT_FOUND_0x16="0"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        id="@+id/cl_home_referral_extended_banner_skeleton"
        background="@drawable/home_component_border"
        paddingTop="16dp"
        paddingBottom="16dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x14="0"
        NOT_FOUND_0x15="@+id/iv_home_referral_banner_skeleton">
        <TextView
            textSize="12sp"
            textColor="#313131"
            ellipsize="end"
            id="@+id/tv_home_referral_description_skeleton"
            background="@drawable/square_rounded_skeleton"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_marginLeft="16dp"
            layout_marginRight="16dp"
            maxLines="2"
            lineSpacingExtra="4sp"
            layout_marginStart="16dp"
            layout_marginEnd="16dp"
            NOT_FOUND_0x12="@+id/btn_get_reward_skeleton"
            NOT_FOUND_0x14="0"/>
        <Button
            textSize="12sp"
            id="@+id/btn_get_reward_skeleton"
            background="@drawable/square_rounded_skeleton"
            layout_width="wrap_content"
            layout_marginRight="16dp"
            layout_marginEnd="16dp"
            NOT_FOUND_0x10="@+id/tv_home_referral_description_skeleton"
            NOT_FOUND_0x13="0"
            NOT_FOUND_0x16="@+id/tv_home_referral_description_skeleton"
            style="@style/2132017482"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
