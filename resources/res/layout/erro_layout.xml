<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/rl_root"
    background="@android:color/white"
    visibility="gone"
    layout_width="match_parent"
    layout_height="match_parent">
    <ImageView
        id="@+id/iv_error_net"
        layout_width="300dp"
        layout_height="276dp"
        layout_marginTop="93dp"
        src="@drawable/error_net"
        scaleType="fitCenter"
        layout_centerHorizontal="true"/>
    <TextView
        textSize="18sp"
        textColor="#616161"
        id="@+id/title1"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="26dp"
        text="Oops,it seems that there is"
        layout_below="@+id/iv_error_net"
        layout_centerHorizontal="true"/>
    <TextView
        textSize="18sp"
        textColor="#616161"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="2dp"
        text="something wrong..."
        layout_below="@+id/title1"
        layout_centerHorizontal="true"/>
    <TextView
        textColor="@android:color/white"
        gravity="center"
        id="@+id/tv_try_again"
        background="@drawable/sq_confirm_selected"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="16dp"
        layout_marginRight="16dp"
        layout_marginBottom="20dp"
        text="TRY AGAIN"
        layout_alignParentBottom="true"/>
</RelativeLayout>
