<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    background="?android:attr/selectableItemBackground"
    paddingLeft="10dp"
    paddingTop="5dp"
    paddingRight="10dp"
    paddingBottom="5dp"
    clickable="true"
    layout_width="80dp"
    layout_height="wrap_content">
    <ImageView
        layout_gravity="center_horizontal"
        id="@+id/iv_channel"
        background="@drawable/griver_core_round_white_background"
        padding="10dp"
        layout_width="48dp"
        layout_height="48dp"/>
    <TextView
        textSize="13sp"
        textColor="#333333"
        ellipsize="end"
        layout_gravity="center"
        id="@+id/tv_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="5dp"
        singleLine="true"/>
</LinearLayout>
