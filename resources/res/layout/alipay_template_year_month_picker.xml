<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="wrap_content"
    layout_height="wrap_content"
    layout_marginTop="10dp">
    <RelativeLayout
        id="@+id/month_area"
        layout_width="80dp"
        layout_height="wrap_content">
        <Button
            textSize="30sp"
            id="@+id/month_up_btn"
            background="@drawable/alipay_template_year_month_picker_button"
            layout_width="match_parent"
            layout_height="40dp"
            text="+"/>
        <TextView
            textSize="20sp"
            gravity="center"
            id="@+id/month_text"
            background="#ededec"
            paddingTop="4dp"
            paddingBottom="4dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_below="@+id/month_up_btn"/>
        <Button
            textSize="30sp"
            id="@+id/month_down_btn"
            background="@drawable/alipay_template_year_month_picker_button"
            layout_width="match_parent"
            layout_height="40dp"
            text="-"
            layout_below="@+id/month_text"/>
    </RelativeLayout>
    <RelativeLayout
        id="@+id/year_area"
        layout_width="80dp"
        layout_height="wrap_content"
        layout_marginLeft="10dp"
        layout_toRightOf="@+id/month_area">
        <Button
            textSize="30sp"
            id="@+id/year_up_btn"
            background="@drawable/alipay_template_year_month_picker_button"
            layout_width="match_parent"
            layout_height="40dp"
            text="+"/>
        <TextView
            textSize="20sp"
            textColor="#000000"
            gravity="center"
            id="@+id/year_text"
            background="#ededec"
            paddingTop="4dp"
            paddingBottom="4dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_below="@+id/year_up_btn"/>
        <Button
            textSize="30sp"
            id="@+id/year_down_btn"
            background="@drawable/alipay_template_year_month_picker_button"
            layout_width="match_parent"
            layout_height="40dp"
            text="-"
            layout_below="@+id/year_text"/>
    </RelativeLayout>
</RelativeLayout>
