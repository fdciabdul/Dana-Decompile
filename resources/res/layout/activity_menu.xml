<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="#f7f7f9"
    layout_width="match_parent"
    layout_height="match_parent">
    <RelativeLayout
        background="#108ee9"
        layout_width="match_parent"
        layout_height="wrap_content">
        <LinearLayout
            gravity="center_vertical"
            orientation="horizontal"
            id="@+id/ll_back"
            paddingLeft="10dp"
            paddingRight="16dp"
            layout_width="wrap_content"
            layout_height="44dp">
            <ImageButton
                id="@+id/img_back"
                background="@drawable/otp_previous"
                layout_width="10dp"
                layout_height="17dp"
                layout_centerVertical="true"/>
        </LinearLayout>
        <TextView
            textSize="18dp"
            textColor="#ffffff"
            id="@+id/tv_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="10dp"
            layout_marginBottom="10dp"
            layout_centerInParent="true"
            layout_centerHorizontal="true"
            layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        textSize="24sp"
        textColor="@android:color/black"
        gravity="center"
        id="@+id/tv_center_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="77dp"
        layout_centerHorizontal="true"/>
    <ListView
        id="@+id/listView"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="33dp"
        divider="@null"
        layout_below="@+id/tv_center_title"/>
    <TextView
        textSize="18sp"
        textColor="@android:color/white"
        gravity="center"
        id="@+id/tv_confirm"
        visibility="gone"
        layout_width="match_parent"
        layout_height="47dp"
        layout_marginLeft="16dp"
        layout_marginTop="40dp"
        layout_marginRight="16dp"
        text="@string/set_security_confirm"
        layout_below="@+id/listView"/>
</RelativeLayout>
