<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/status_bar_latest_event_content"
    layout_width="match_parent"
    layout_height="128dp">
    <ImageView
        id="@+id/icon"
        layout_width="128dp"
        layout_height="128dp"
        scaleType="centerCrop"/>
    <include
        layout_width="48dp"
        layout_height="48dp"
        layout_marginLeft="2dp"
        layout_marginRight="2dp"
        layout_alignParentRight="true"
        layout_alignParentEnd="true"
        layout="@layout/notification_media_cancel_action"/>
    <LinearLayout
        orientation="horizontal"
        id="@+id/notification_main_column_container"
        paddingTop="@dimen/2131165987"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="128dp"
        minHeight="64dp"
        layout_toLeftOf="@+id/cancel_action"
        layout_marginStart="128dp"
        layout_toStartOf="@+id/cancel_action">
        <FrameLayout
            id="@+id/notification_main_column"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginLeft="@dimen/2131165988"
            layout_marginRight="8dp"
            layout_marginBottom="8dp"
            layout_weight="1"
            layout_marginStart="@dimen/2131165988"
            layout_marginEnd="8dp"/>
        <FrameLayout
            id="@+id/right_side"
            paddingTop="4dp"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginRight="8dp"
            layout_marginEnd="8dp">
            <DateTimeView
                textAppearance="@style/2132017727"
                layout_gravity="end|top"
                id="@+id/time"
                visibility="gone"
                layout_width="wrap_content"
                layout_height="wrap_content"
                singleLine="true"/>
            <Chronometer
                textAppearance="@style/2132017727"
                layout_gravity="end|top"
                id="@+id/chronometer"
                visibility="gone"
                layout_width="wrap_content"
                layout_height="wrap_content"
                singleLine="true"/>
            <TextView
                textAppearance="@style/2132017722"
                layout_gravity="end|bottom"
                id="@+id/info"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginTop="20dp"
                singleLine="true"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        orientation="horizontal"
        id="@+id/media_actions"
        layout_width="match_parent"
        layout_height="48dp"
        layout_marginLeft="12dp"
        layout_marginRight="12dp"
        layout_toRightOf="@+id/icon"
        layout_alignParentBottom="true"
        layoutDirection="ltr"
        layout_toEndOf="@+id/icon"/>
    <ImageView
        id="@+id/action_divider"
        background="?android:attr/dividerHorizontal"
        layout_width="match_parent"
        layout_height="1dp"
        layout_toRightOf="@+id/icon"
        layout_above="@+id/media_actions"
        layout_toEndOf="@+id/icon"/>
</RelativeLayout>
