<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.ariver.app.ui.tabbar.RVTabBarRootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="wrap_content"
    layout_height="48dp">
    <TextView
        textSize="10dp"
        gravity="center"
        id="@+id/ariver_tabbar_item_text"
        paddingTop="3dp"
        layout_width="wrap_content"
        layout_height="wrap_content"
        maxLines="1"
        layout_centerInParent="true"/>
    <RelativeLayout
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginLeft="-14dp"
        layout_marginTop="4dp"
        layout_toRightOf="@+id/ariver_tabbar_item_text">
        <TextView
            textSize="8dp"
            textColor="@android:color/white"
            gravity="center"
            layout_gravity="center"
            id="@+id/ariver_tabbar_item_badge"
            background="@drawable/ariver_tabbar_badge"
            padding="3dp"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            minWidth="20dp"
            maxLines="1"/>
        <com.alibaba.ariver.app.ui.tabbar.RVTabDotView
            id="@+id/ariver_tabbar_item_dot_view"
            visibility="gone"
            layout_width="10dp"
            layout_height="10dp"/>
    </RelativeLayout>
</com.alibaba.ariver.app.ui.tabbar.RVTabBarRootLayout>
