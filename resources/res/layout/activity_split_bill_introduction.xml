<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="match_parent">
    <include layout="@layout/layout_toolbar"/>
    <androidx.core.widget.NestedScrollView
        descendantFocusability="blocksDescendants"
        style="@style/2132017531">
        <LinearLayout
            orientation="vertical"
            paddingBottom="20dp"
            layout_width="match_parent"
            layout_height="wrap_content">
            <ImageView
                layout_width="match_parent"
                layout_height="wrap_content"
                src="@drawable/bg_split_bill_introduction"
                scaleType="fitXY"
                adjustViewBounds="true"
                NOT_FOUND_0x15="0"
                NOT_FOUND_0x16="0"/>
            <TextView
                textSize="14sp"
                textColor="#313131"
                gravity="center_horizontal"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginLeft="45dp"
                layout_marginTop="18dp"
                layout_marginRight="45dp"
                text="@string/split_bill_entry_title"
                lineSpacingExtra="4sp"
                fontFamily="@font/2131296265"
                layout_marginStart="45dp"
                layout_marginEnd="45dp"/>
            <TextView
                textSize="14sp"
                textColor="#313131"
                gravity="center_horizontal"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginLeft="45dp"
                layout_marginRight="45dp"
                text="@string/split_bill_entry_description"
                lineSpacingExtra="4sp"
                fontFamily="@font/open_sans_bold"
                layout_marginStart="45dp"
                layout_marginEnd="45dp"/>
            <Button
                id="@+id/btn_split_bill_entry"
                layout_marginLeft="16dp"
                layout_marginTop="12dp"
                layout_marginRight="16dp"
                text="@string/label_split_bill"
                contentDescription="@string/btnSplitbill"
                layout_marginStart="16dp"
                layout_marginEnd="16dp"
                style="@style/2132017655"/>
            <id.dana.splitbill.view.SplitBillHistoryView
                id="@+id/sbhv_bill_histories"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginLeft="16dp"
                layout_marginTop="40dp"
                layout_marginRight="16dp"
                layout_marginStart="16dp"
                layout_marginEnd="16dp"
                NOT_FOUND_0x17="true"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
