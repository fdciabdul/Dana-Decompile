<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="@drawable/bg_rounded_blue_50_12dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <TextView
        textStyle="bold"
        id="@+id/tv_login_view_title"
        paddingTop="12dp"
        layout_width="wrap_content"
        layout_height="wrap_content"
        text="@string/widget_login_view_title"
        paddingStart="8dp"
        paddingEnd="8dp"
        style="@style/2132017438"/>
    <TextView
        textSize="8sp"
        id="@+id/tv_login_view_desc"
        paddingTop="4dp"
        paddingBottom="5dp"
        layout_width="wrap_content"
        layout_height="wrap_content"
        text="@string/widget_login_view_desc"
        layout_below="@+id/tv_login_view_title"
        paddingStart="8dp"
        paddingEnd="8dp"
        style="@style/2132017438"/>
    <RelativeLayout
        id="@+id/vg_login_view_login_button"
        background="@drawable/bg_rounded_blue_40_33dp"
        layout_width="match_parent"
        layout_height="44dp"
        layout_marginTop="32dp"
        layout_marginBottom="12dp"
        layout_below="@+id/tv_login_view_title"
        layout_marginStart="8dp"
        layout_marginEnd="8dp">
        <TextView
            textStyle="bold"
            id="@+id/tv_action_label"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/login_title"
            layout_centerHorizontal="true"
            layout_centerVertical="true"
            textAllCaps="true"
            layout_marginStart="4dp"
            style="@style/2132017907"/>
    </RelativeLayout>
</RelativeLayout>
