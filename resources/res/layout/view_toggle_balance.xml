<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_width="match_parent"
    layout_height="match_parent">
    <LinearLayout
        orientation="horizontal"
        id="@+id/ll_balance"
        layout_width="wrap_content"
        layout_height="match_parent"
        NOT_FOUND_0x9="0"
        NOT_FOUND_0xa="0"
        NOT_FOUND_0xd="0">
        <TextView
            textStyle="bold"
            id="@+id/tv_currency"
            visibility="visible"
            layout_width="wrap_content"
            layout_height="wrap_content"
            lineSpacingExtra="0sp"
            style="@style/2132017916"/>
        <TextView
            id="@+id/tv_shown_balance"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            lineSpacingExtra="0sp"
            style="@style/2132017916"/>
        <TextView
            id="@+id/tv_hidden_balance"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/hidden_balance_placeholder"
            lineSpacingExtra="0sp"
            style="@style/2132017916"/>
    </LinearLayout>
    <ImageView
        id="@+id/iv_hide_balance"
        layout_width="wrap_content"
        layout_height="match_parent"
        layout_marginLeft="10dp"
        NOT_FOUND_0x9="@+id/ll_balance"
        NOT_FOUND_0xb="@+id/ll_balance"
        NOT_FOUND_0xc="0"
        NOT_FOUND_0xd="@+id/ll_balance"/>
</androidx.constraintlayout.widget.ConstraintLayout>
