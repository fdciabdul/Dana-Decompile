<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    background="#f5f5f5"
    paddingTop="12dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    paddingStart="16dp"
    paddingEnd="16dp">
    <androidx.appcompat.widget.AppCompatTextView
        id="@+id/tv_installment_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        text="@string/choose_installment_period_title"
        NOT_FOUND_0x10="0"
        NOT_FOUND_0x12="0"
        style="@style/2132017908"/>
    <androidx.recyclerview.widget.RecyclerView
        id="@+id/rv_installment_options"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="8dp"
        contentDescription="@string/sdet_btn_installment_period"
        NOT_FOUND_0xe="androidx.recyclerview.widget.GridLayoutManager"
        NOT_FOUND_0x10="0"
        NOT_FOUND_0x11="@+id/tv_installment_title"
        NOT_FOUND_0x13="3"/>
    <LinearLayout
        orientation="horizontal"
        id="@+id/ll_billing_info"
        background="@drawable/bg_rounded_white_4dp"
        paddingTop="8dp"
        paddingBottom="8dp"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="15dp"
        contentDescription="@string/sdet_lbl_additional_info"
        paddingStart="12dp"
        paddingEnd="12dp"
        NOT_FOUND_0xf="0"
        NOT_FOUND_0x10="0"
        NOT_FOUND_0x11="@+id/rv_installment_options">
        <androidx.appcompat.widget.AppCompatImageView
            id="@+id/ic_info"
            layout_width="16dp"
            layout_height="16dp"
            layout_marginTop="2dp"
            layout_marginEnd="8dp"
            NOT_FOUND_0x14="@drawable/icon_glyph_info_filled"/>
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_billing_info"
            layout_width="match_parent"
            layout_height="wrap_content"
            style="@style/2132017440"/>
    </LinearLayout>
    <id.dana.cashier.view.PaylaterInstallmentSimulationView
        id="@+id/view_installment_simulation"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x10="0"
        NOT_FOUND_0x11="@+id/ll_billing_info"/>
</androidx.constraintlayout.widget.ConstraintLayout>
