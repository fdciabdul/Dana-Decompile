<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="match_parent">
    <RelativeLayout
        id="@+id/title_layout"
        background="#ffffff"
        layout_width="match_parent"
        layout_height="48dp">
        <ImageButton
            id="@+id/h5_lv_nav_back_loading"
            background="@android:color/transparent"
            layout_width="48dp"
            layout_height="match_parent"
            src="@drawable/h5_title_bar_back_btn_selector"
            scaleType="centerInside"
            layout_alignParentLeft="true"
            layout_centerVertical="true"/>
        <RelativeLayout
            orientation="horizontal"
            id="@+id/h5_ll_lv_title_loading"
            paddingRight="20dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_toRightOf="@+id/h5_v_divider_loading"
            layout_centerVertical="true">
            <ProgressBar
                id="@+id/h5_nav_loading_loading"
                visibility="invisible"
                layout_width="16dp"
                layout_height="16dp"
                layout_marginLeft="6dp"
                layout_marginRight="6dp"
                indeterminateDrawable="@drawable/h5_title_bar_progress"
                layout_toRightOf="@+id/h5_ll_lv_nav_title"
                layout_centerVertical="true"/>
            <TextView
                textSize="16sp"
                textColor="#ff111111"
                ellipsize="end"
                id="@+id/h5_ll_lv_nav_title"
                layout_width="wrap_content"
                layout_height="wrap_content"
                maxLines="1"/>
        </RelativeLayout>
        <View
            layout_gravity="center"
            id="@+id/h5_v_divider_loading"
            background="#d9d9d9"
            layout_width="0.7dp"
            layout_height="24dp"
            layout_marginRight="12dp"
            layout_toRightOf="@+id/h5_lv_nav_back_loading"
            layout_centerVertical="true"
            layout_marginEnd="12dp"/>
    </RelativeLayout>
    <View
        background="#c6c8c9"
        layout_width="match_parent"
        layout_height="1px"/>
    <ProgressBar
        id="@+id/web_progress"
        layout_width="match_parent"
        layout_height="2dp"
        progressDrawable="@drawable/web_loading_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <WebView
        id="@+id/web_view"
        layout_width="match_parent"
        layout_height="match_parent"/>
</LinearLayout>
