<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <TextView
        textSize="16dp"
        textColor="#969696"
        gravity="center_vertical"
        id="@+id/letter_text"
        background="#f6f6f6"
        paddingLeft="12dp"
        layout_width="match_parent"
        layout_height="40dp"/>
    <LinearLayout
        gravity="center_vertical"
        orientation="horizontal"
        paddingLeft="12dp"
        paddingRight="12dp"
        layout_width="match_parent"
        layout_height="44dp">
        <TextView
            textSize="16dp"
            textColor="#333"
            id="@+id/region_text"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"/>
        <TextView
            textSize="16dp"
            textColor="#333"
            id="@+id/phone_prefix_text"
            layout_width="wrap_content"
            layout_height="wrap_content"/>
    </LinearLayout>
    <View
        id="@+id/divider"
        background="#e9e9e9"
        layout_width="match_parent"
        layout_height="1dp"
        layout_marginLeft="12dp"
        layout_marginRight="12dp"/>
</LinearLayout>
