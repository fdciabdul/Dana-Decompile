<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    id="@+id/parent_more_for_you"
    layout_width="match_parent"
    layout_height="match_parent">
    <LinearLayout
        orientation="vertical"
        id="@+id/llHeaderMoreForYou"
        background="@drawable/bg_home_widget_white_rounded"
        paddingTop="12dp"
        paddingBottom="12dp"
        visibility="gone"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="12dp"
        layout_marginRight="12dp">
        <include
            id="@+id/v_header_with_action"
            layout="@layout/view_header_with_action"/>
        <androidx.recyclerview.widget.RecyclerView
            id="@+id/rv_more_for_you"
            paddingLeft="12dp"
            paddingRight="12dp"
            clipToPadding="false"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        gravity="center"
        orientation="horizontal"
        id="@+id/ll_progress_view"
        background="@drawable/bg_home_widget_white_rounded"
        layout_width="match_parent"
        layout_height="100dp"
        layout_marginLeft="12dp"
        layout_marginRight="12dp">
        <TextView
            id="@+id/tv_loading_text"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/more_for_you_loading_text"/>
        <id.dana.richview.LogoProgressView
            id="@+id/progress_view"
            layout_width="24dp"
            layout_height="24dp"
            layout_marginEnd="8dp"/>
    </LinearLayout>
</FrameLayout>
