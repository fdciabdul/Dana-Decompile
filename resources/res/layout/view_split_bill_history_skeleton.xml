<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    orientation="horizontal"
    id="@+id/bill_history_skeleton"
    paddingTop="8dp"
    paddingBottom="8dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    weightSum="10">
    <ImageView
        layout_gravity="center_vertical"
        id="@+id/iv_status"
        background="@drawable/rounded_skeleton"
        layout_width="20dp"
        layout_height="20dp"/>
    <View
        textColor="#313131"
        layout_gravity="center_vertical"
        id="@+id/tv_date_split_bill_history"
        background="@drawable/square_rounded_skeleton"
        layout_width="45dp"
        layout_height="20dp"
        layout_marginLeft="4dp"
        layout_marginStart="4dp"/>
    <View
        layout_gravity="center_vertical"
        id="@+id/tv_description"
        background="@drawable/square_rounded_skeleton"
        layout_width="0dp"
        layout_height="20dp"
        layout_marginLeft="4dp"
        layout_marginRight="4dp"
        layout_weight="5"
        layout_marginStart="4dp"
        layout_marginEnd="4dp"/>
    <View
        layout_gravity="center_vertical"
        id="@+id/ctv_amount"
        background="@drawable/square_rounded_skeleton"
        layout_width="0dp"
        layout_height="20dp"
        layout_marginRight="4dp"
        layout_weight="5"
        layout_marginEnd="4dp"/>
    <FrameLayout
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginRight="2dp"
        layout_marginEnd="2dp">
        <de.hdodenhof.circleimageview.CircleImageView
            id="@+id/civ_first_payer"
            layout_width="26dp"
            layout_height="26dp"
            src="@drawable/square_skeleton"
            NOT_FOUND_0x10="@color/2131100492"
            NOT_FOUND_0x11="1dp"
            NOT_FOUND_0x12="@color/2131100492"/>
        <de.hdodenhof.circleimageview.CircleImageView
            id="@+id/civ_second_payer"
            layout_width="26dp"
            layout_height="26dp"
            layout_marginLeft="13dp"
            src="@drawable/square_skeleton"
            layout_marginStart="13dp"
            NOT_FOUND_0x10="@color/2131100492"
            NOT_FOUND_0x11="1dp"
            NOT_FOUND_0x12="@color/2131100492"/>
        <de.hdodenhof.circleimageview.CircleImageView
            id="@+id/civ_third_payer"
            layout_width="26dp"
            layout_height="26dp"
            layout_marginLeft="26dp"
            src="@drawable/square_skeleton"
            layout_marginStart="26dp"
            NOT_FOUND_0x10="@color/2131100492"
            NOT_FOUND_0x11="1dp"
            NOT_FOUND_0x12="@color/2131100492"/>
    </FrameLayout>
</LinearLayout>
