<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    paddingTop="12dp"
    paddingBottom="32dp"
    layout_width="match_parent"
    layout_height="wrap_content">
    <LinearLayout
        orientation="vertical"
        id="@+id/ll_installment_simulation"
        layout_width="match_parent"
        layout_height="wrap_content"
        NOT_FOUND_0x11="0"
        NOT_FOUND_0x13="0">
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_installment_simulation_title"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/installment_simulation_title_akulaku"
            contentDescription="@string/sdet_lbl_installment_simulation"
            style="@style/2132017908"/>
        <LinearLayout
            orientation="horizontal"
            id="@+id/ll_installment_simulation_title"
            background="@drawable/bg_rounded_white_4dp"
            paddingTop="20dp"
            paddingBottom="20dp"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="11dp"
            weightSum="3"
            paddingStart="12dp"
            paddingEnd="12dp"
            NOT_FOUND_0x11="0"
            NOT_FOUND_0x12="@+id/tv_installment_simulation_title">
            <androidx.appcompat.widget.AppCompatTextView
                id="@+id/tv_period_title"
                layout_width="0dp"
                layout_height="wrap_content"
                text="@string/installment_simulation_period_title"
                maxLines="2"
                layout_weight="1"
                textAlignment="center"
                style="@style/2132017900"/>
            <androidx.appcompat.widget.AppCompatTextView
                layout_gravity="center"
                id="@+id/tv_due_date_title"
                layout_width="0dp"
                layout_height="wrap_content"
                text="@string/installment_simulation_due_date_title"
                maxLines="2"
                layout_weight="1"
                textAlignment="center"
                style="@style/2132017900"/>
            <androidx.appcompat.widget.AppCompatTextView
                id="@+id/tv_bill_amount_title"
                layout_width="0dp"
                layout_height="wrap_content"
                text="@string/installment_simulation_bill_amount_title"
                maxLines="2"
                layout_weight="1"
                textAlignment="center"
                style="@style/2132017900"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            id="@+id/rv_installment_simulation"
            layout_width="match_parent"
            layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
