<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    background="#f8f8f8"
    fitsSystemWindows="true"
    layout_width="match_parent"
    layout_height="match_parent">
    <com.alibaba.griver.ui.ant.AUTitleBar
        id="@+id/griver_tool_bar"
        layout_width="match_parent"
        layout_height="wrap_content"/>
    <LinearLayout
        orientation="vertical"
        id="@+id/layout_content"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_below="@+id/griver_tool_bar">
        <LinearLayout
            layout_width="match_parent"
            layout_height="50dp">
            <TextView
                textSize="13sp"
                textColor="#8a000000"
                layout_gravity="center_vertical"
                id="@+id/tv_griver_open_settings"
                layout_width="wrap_content"
                layout_height="wrap_content"
                layout_marginLeft="20dp"
                text="@string/griver_open_setting_intro"/>
        </LinearLayout>
        <RelativeLayout
            id="@+id/layout_user"
            background="@android:color/white"
            layout_width="match_parent"
            layout_height="60dp">
            <RelativeLayout
                background="?android:attr/selectableItemBackground"
                layout_width="match_parent"
                layout_height="48dp">
                <TextView
                    textColor="#333333"
                    layout_width="wrap_content"
                    layout_height="wrap_content"
                    layout_marginLeft="20dp"
                    text="@string/griver_device_user_info"
                    layout_centerVertical="true"/>
                <ImageView
                    layout_width="18dp"
                    layout_height="18dp"
                    layout_marginRight="20dp"
                    src="@drawable/griver_more_right"
                    layout_alignParentRight="true"
                    layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                background="#f8f8f8"
                layout_width="match_parent"
                layout_height="12dp"
                layout_alignParentBottom="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            id="@+id/rv_griver_open_setting"
            layout_width="match_parent"
            layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        gravity="center"
        orientation="vertical"
        id="@+id/layout_empty"
        visibility="visible"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="150dp">
        <TextView
            textColor="#8a000000"
            id="@+id/tv_empty_text"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/griver_no_permission_used"/>
    </LinearLayout>
</RelativeLayout>
