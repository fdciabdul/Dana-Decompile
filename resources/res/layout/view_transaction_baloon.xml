<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    background="@drawable/rounded_white_mini"
    padding="8dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    layout_marginLeft="20dp"
    layout_marginRight="20dp"
    layout_above="@+id/tv_balance"
    layout_alignParentTop="true">
    <TextView
        textSize="13sp"
        textColor="#108ee9"
        id="@+id/button_more"
        layout_width="wrap_content"
        layout_height="wrap_content"
        text="@string/see"
        layout_alignParentRight="true"
        layout_centerVertical="true"
        layout_alignParentEnd="true"/>
    <ImageView
        id="@+id/iv_icon"
        layout_width="20dp"
        layout_height="20dp"
        layout_marginRight="10dp"
        NOT_FOUND_0x11="@drawable/ic_success"/>
    <TextView
        textSize="12sp"
        textColor="#4a4a4a"
        id="@+id/tv_message"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="@string/transaction_success"
        layout_toRightOf="@+id/iv_icon"/>
    <TextView
        textSize="16sp"
        textColor="#4a4a4a"
        id="@+id/res_0x7f0a1618_snapshotcontroller_1"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_toRightOf="@+id/iv_icon"
        layout_below="@+id/tv_message"/>
</RelativeLayout>
