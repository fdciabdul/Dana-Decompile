<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    id="@+id/ll_split_bill_details"
    style="@style/2132017490">
    <ImageView
        id="@+id/iv_split_bill_status"
        src="@drawable/bg_split_bill_introduction"
        scaleType="fitXY"
        adjustViewBounds="true"
        style="@style/2132017490"/>
    <TextView
        textSize="12sp"
        textColor="#bfbfbf"
        gravity="center_horizontal"
        layout_gravity="center_horizontal"
        id="@+id/tv_amount_title"
        layout_marginTop="8dp"
        text="@string/bill_amount"
        lineSpacingExtra="4sp"
        textAllCaps="true"
        fontFamily="@font/2131296266"
        style="@style/2132017490"/>
    <id.dana.richview.CurrencyTextView
        textSize="30sp"
        textColor="@android:color/black"
        layout_gravity="center_horizontal"
        id="@+id/ctv_total_amount"
        lineSpacingExtra="10sp"
        contentDescription="@string/txtTotalAmount"
        fontFamily="@font/2131296266"
        style="@style/2132018187"/>
    <TextView
        textSize="14sp"
        textColor="#313131"
        gravity="center_horizontal"
        layout_gravity="center_horizontal"
        id="@+id/tv_remarks"
        layout_marginLeft="16dp"
        layout_marginTop="8dp"
        layout_marginRight="16dp"
        layout_marginBottom="16dp"
        lineSpacingExtra="4sp"
        fontFamily="@font/2131296265"
        layout_marginStart="16dp"
        layout_marginEnd="16dp"
        style="@style/2132018187"/>
    <id.dana.splitbill.view.PayerListView
        id="@+id/view_split_bill_payer"
        style="@style/2132017490"/>
</LinearLayout>
