<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="#f7f7f9"
    layout_width="match_parent"
    layout_height="match_parent">
    <LinearLayout
        gravity="center"
        orientation="vertical"
        id="@+id/ll_setup"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="32dp"
        layout_centerHorizontal="true">
        <TextView
            textSize="24sp"
            textColor="#ff000000"
            id="@+id/tv_center"
            layout_width="wrap_content"
            layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
        id="@+id/listView"
        layout_width="match_parent"
        layout_height="match_parent"
        layout_marginBottom="15dp"
        listSelector="@android:color/transparent"
        divider="@null"
        layout_above="@+id/tv_confirm"
        layout_below="@+id/ll_setup"/>
    <TextView
        textSize="18sp"
        textColor="@android:color/white"
        gravity="center"
        id="@+id/tv_confirm"
        background="@drawable/verify_confirm_unselected"
        layout_width="match_parent"
        layout_height="47dp"
        layout_marginLeft="17dp"
        layout_marginRight="17dp"
        layout_marginBottom="60dp"
        text="SUBMIT"
        layout_alignParentBottom="true"/>
    <TextView
        textSize="17sp"
        textColor="#00bdf1"
        id="@+id/change_method"
        padding="5dp"
        visibility="gone"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginBottom="20dp"
        layout_alignParentBottom="true"
        layout_centerHorizontal="true"/>
</RelativeLayout>
