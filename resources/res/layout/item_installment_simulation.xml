<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_width="match_parent"
    layout_height="wrap_content">
    <LinearLayout
        orientation="horizontal"
        id="@+id/ll_installment_simulation_content"
        background="@drawable/bg_rounded_white_4dp"
        paddingTop="20dp"
        paddingBottom="20dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="1dp"
        weightSum="3"
        paddingStart="12dp"
        paddingEnd="12dp"
        NOT_FOUND_0xd="0"
        NOT_FOUND_0xe="0">
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_period"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            textAlignment="center"
            style="@style/2132017440"/>
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_due_date"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            textAlignment="center"
            style="@style/2132017440"/>
        <androidx.appcompat.widget.AppCompatTextView
            id="@+id/tv_bill_amount"
            layout_width="0dp"
            layout_height="wrap_content"
            layout_weight="1"
            textAlignment="center"
            style="@style/2132017436"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
