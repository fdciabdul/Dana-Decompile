<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="match_parent"
    layout_height="match_parent">
    <com.alibaba.griver.image.capture.widget.TouchInterceptFrameLayout
        id="@+id/cameraContainer"
        layout_width="match_parent"
        layout_height="match_parent"/>
    <RelativeLayout
        id="@+id/control_panel"
        background="#96000000"
        clickable="false"
        layout_width="match_parent"
        layout_height="143dp"
        layout_alignParentBottom="true">
        <ImageView
            id="@+id/mode_index"
            layout_width="6dp"
            layout_height="6dp"
            layout_marginTop="6dp"
            src="@drawable/griver_image_capture_indicator"
            layout_centerHorizontal="true"/>
        <RelativeLayout
            orientation="horizontal"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_below="@+id/mode_index"
            layout_centerHorizontal="true">
            <TextView
                textSize="14dp"
                textColor="#ff00a9ed"
                id="@+id/indicator_video"
                padding="8dp"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="@string/griver_image_capture"
                singleLine="true"
                layout_centerInParent="true"/>
            <TextView
                textSize="14dp"
                textColor="#ffffff"
                id="@+id/indicator_capture"
                padding="8dp"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="@string/griver_image_capture"
                singleLine="true"
                layout_toRightOf="@+id/indicator_video"/>
        </RelativeLayout>
        <ImageView
            id="@+id/btnFilter"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginRight="49dp"
            layout_marginBottom="40dp"
            layout_alignParentRight="true"
            layout_alignParentBottom="true"
            layout_centerVertical="true"/>
        <ImageView
            id="@+id/bt_latest_record_entry"
            padding="3dp"
            layout_width="30.3dp"
            layout_height="30.3dp"
            layout_marginBottom="43dp"
            scaleType="centerCrop"
            layout_alignParentLeft="true"
            layout_alignParentBottom="true"
            layout_centerVertical="true"/>
        <ImageView
            id="@+id/btnEffectSelect2"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginBottom="40dp"
            layout_toRightOf="@+id/bt_latest_record_entry"
            layout_alignParentBottom="true"
            layout_centerVertical="true"/>
        <ImageView
            id="@+id/btnEffectSelect"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginLeft="49dp"
            layout_marginBottom="40dp"
            layout_alignParentLeft="true"
            layout_alignParentBottom="true"
            layout_centerVertical="true"/>
    </RelativeLayout>
    <com.alibaba.griver.image.capture.widget.CaptureBtn
        id="@+id/btnRecord"
        visibility="gone"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginBottom="12.6dp"
        layout_alignParentBottom="true"
        layout_centerHorizontal="true"/>
    <TextView
        textSize="13dp"
        gravity="center_horizontal"
        id="@+id/tips"
        background="@drawable/griver_image_bg_capture_tips"
        padding="5dp"
        visibility="gone"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginBottom="15dp"
        layout_above="@+id/control_panel"
        layout_centerHorizontal="true"/>
    <TextView
        textSize="13dp"
        gravity="center_horizontal"
        id="@+id/tips_common"
        background="@drawable/griver_image_bg_capture_tips"
        padding="5dp"
        visibility="gone"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginBottom="60dp"
        layout_above="@+id/control_panel"
        layout_centerHorizontal="true"/>
    <View
        id="@+id/coverView"
        layout_width="match_parent"
        layout_height="match_parent"/>
    <ImageView
        id="@+id/ivCameraPrepare"
        background="#1b1c24"
        layout_width="match_parent"
        layout_height="match_parent"
        src="@drawable/griver_image_ic_camera_prepare"
        scaleType="centerInside"/>
    <ImageView
        visibility="gone"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="180.6dp"
        layout_centerHorizontal="true"/>
    <View
        id="@+id/v_full_screen_top_place_holder"
        background="#80000000"
        visibility="gone"
        layout_width="match_parent"
        layout_height="0dp"/>
    <com.alibaba.griver.image.capture.widget.TitleBar
        id="@+id/title"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_below="@+id/v_full_screen_top_place_holder"/>
    <View
        id="@+id/recordProgress"
        background="#00aaee"
        visibility="gone"
        layout_width="match_parent"
        layout_height="5.3dp"
        layout_below="@+id/title"/>
    <TextView
        textSize="13.3dp"
        textColor="#ffffff"
        id="@+id/top_tips"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="20dp"
        layout_below="@+id/title"
        layout_centerHorizontal="true"/>
</RelativeLayout>
