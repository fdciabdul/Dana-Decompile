<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <TextView
        id="@+id/tvTitle"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="@string/daily_limit_title"
        style="@style/2132017901"/>
    <id.dana.core.ui.richview.CurrencyEditText
        id="@+id/etAmountDaily"
        background="@drawable/selector_et_yellow"
        layout_width="match_parent"
        layout_height="wrap_content"
        maxLines="1"
        android:maxLength="13"
        digits="0123456789"
        inputType="number"
        style="@style/2132017413"/>
    <TextView
        id="@+id/tvErrorHelper"
        visibility="invisible"
        layout_width="match_parent"
        layout_height="wrap_content"
        text="@string/daily_limit_description_helper"
        style="@style/2132017440"/>
</LinearLayout>
