<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="horizontal"
    id="@+id/status_bar_latest_event_content"
    layout_width="match_parent"
    layout_height="64dp">
    <include
        layout_width="64dp"
        layout_height="64dp"
        layout="@layout/notification_template_icon_group"/>
    <include
        layout_width="0dp"
        layout_height="wrap_content"
        layout_weight="1"
        layout="@layout/notification_template_lines_media"/>
    <LinearLayout
        layout_gravity="end|center_vertical"
        orientation="horizontal"
        id="@+id/media_actions"
        layout_width="wrap_content"
        layout_height="match_parent"
        layoutDirection="ltr"/>
    <include
        layout_width="48dp"
        layout_height="match_parent"
        layout_marginRight="6dp"
        layout_marginEnd="6dp"
        layout="@layout/notification_media_cancel_action"/>
    <ImageView
        id="@+id/end_padder"
        layout_width="6dp"
        layout_height="match_parent"/>
</LinearLayout>
