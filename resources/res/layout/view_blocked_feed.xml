<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    background="#ffffff"
    layout_width="match_parent"
    layout_height="60dp"
    paddingStart="16dp"
    paddingEnd="16dp">
    <de.hdodenhof.circleimageview.CircleImageView
        id="@+id/iv_rounded_avatar"
        layout_width="wrap_content"
        layout_height="wrap_content"
        src="@drawable/bukalapak"
        layout_centerVertical="true"
        layout_alignParentStart="true"/>
    <LinearLayout
        orientation="vertical"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_centerVertical="true"
        layout_marginStart="12dp"
        layout_marginEnd="12dp"
        layout_toStartOf="@+id/btn_view_button"
        layout_toEndOf="@+id/iv_rounded_avatar">
        <TextView
            ellipsize="end"
            id="@+id/tv_name"
            layout_width="wrap_content"
            layout_height="wrap_content"
            lines="1"
            style="@style/2132017413"/>
        <TextView
            id="@+id/tv_phone_number"
            layout_width="wrap_content"
            layout_height="wrap_content"
            style="@style/2132017440"/>
    </LinearLayout>
    <Button
        id="@+id/btn_view_button"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_centerVertical="true"
        layout_alignParentEnd="true"
        style="@style/2132017495"/>
    <View
        background="#d1d1d1"
        layout_width="match_parent"
        layout_height="1dp"
        layout_alignParentBottom="true"/>
</RelativeLayout>
